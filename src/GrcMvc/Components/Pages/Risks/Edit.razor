            Status = "Open",
            InherentScore = 24,
            ResidualScore = 18,
            ResponsibleParty = "Security Team",
            Owner = "John Smith",
            IdentifiedDate = DateTime.Now.AddMonths(-2),
            TargetClosureDate = DateTime.Now.AddMonths(1),
            Impact = "Critical",
            Likelihood = "Medium",
            ConsequenceArea = "Data Loss, Regulatory Penalty, Reputational Damage",
            CreatedDate = DateTime.Now.AddMonths(-3),
            LastModifiedDate = DateTime.Now
