    public Guid Id { get; set; }

    private RiskEditDto? risk;
    private bool isSubmitting = false;

    protected override async Task OnInitializedAsync()
    {
        // TODO: Load from service
        // var riskService = GetService<IRiskService>();
        // risk = await riskService.GetByIdAsync(Id);

        // Demo data
        risk = new RiskEditDto
        {
            Id = Id,
            RiskNumber = "RISK-001",
            Title = "Data Breach - Customer PII",
            Category = "Compliance",
