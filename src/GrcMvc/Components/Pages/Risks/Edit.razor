    private void NavigateBack() => NavManager.NavigateTo("/risks");

    private async Task HandleUpdateRisk()
    {
        if (risk == null) return;

        isSubmitting = true;
        try
        {
            // TODO: Call service to update risk
            // var riskService = GetService<IRiskService>();
            // await riskService.UpdateAsync(risk);

            // Simulate delay
            await Task.Delay(500);

            NavManager.NavigateTo("/risks");
        }
        finally
        {
            isSubmitting = false;
        }
    }
}