@page "/reports"
@using GrcMvc.Models.Dtos

<PageTitle>Reports</PageTitle>

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-6">GRC Reports</h1>
            <p class="text-muted">Generate and manage compliance and audit reports</p>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-primary" @onclick="ShowGenerateReportModal">
                <span class="me-2">ðŸ“Š</span>Generate New Report
            </button>
        </div>
    </div>

    <!-- Quick Report Templates -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Risk Summary Report</h5>
                    <p class="card-text small">Generate comprehensive risk register report with scoring and mitigation
                        status</p>
                    <a href="#" class="btn btn-sm btn-outline-primary">Generate</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Audit Findings Report</h5>
                    <p class="card-text small">Detailed audit findings with severity levels and remediation tracking</p>
                    <a href="#" class="btn btn-sm btn-outline-primary">Generate</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Control Effectiveness Report</h5>
                    <p class="card-text small">Assessment of control effectiveness with test results and recommendations
                    </p>
                    <a href="#" class="btn btn-sm btn-outline-primary">Generate</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Compliance Status Report</h5>
                    <p class="card-text small">Current status of all compliance requirements and policy adherence</p>
                    <a href="#" class="btn btn-sm btn-outline-primary">Generate</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recently Generated Reports -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Recently Generated Reports</h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Report Number</th>
                                <th>Title</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Period</th>
                                <th>Generated By</th>
                                <th>Generated Date</th>
                                <th>Pages</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var report in reports)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-secondary">@report.ReportNumber</span>
                                    </td>
                                    <td>
                                        <strong>@report.Title</strong>
                                    </td>
                                    <td>@report.Type</td>
                                    <td>
                                        @if (report.Status == "Generated")
                                        {
                                            <span class="badge bg-success">@report.Status</span>
                                        }
                                        else if (report.Status == "Draft")
                                        {
                                            <span class="badge bg-warning">@report.Status</span>
                                        }
                                        else if (report.Status == "Delivered")
                                        {
                                            <span class="badge bg-info">@report.Status</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@report.Status</span>
                                        }
                                    </td>
                                    <td>
                                        @report.GeneratedDate.ToString("MMM yyyy")
                                    </td>
                                    <td>@report.GeneratedBy</td>
                                    <td>@report.GeneratedDate.ToString("MMM dd, yyyy hh:mm tt")</td>
                                    <td>
                                        <span class="badge bg-light text-dark">@report.PageCount</span>
                                    </td>
                                    <td>
                                        <a href="#" class="btn btn-sm btn-outline-primary">View</a>
                                        <a href="#" class="btn btn-sm btn-outline-secondary">Download</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

