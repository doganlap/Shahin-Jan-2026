@model GrcMvc.Models.DTOs.EvidenceDto
@{
    ViewData["Title"] = "Evidence Details";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-file-earmark-text"></i> Evidence Details</h2>
        </div>
        <div class="col text-end">
            <a href="@Model.Location" target="_blank" class="btn btn-success">
                <i class="bi bi-download"></i> Download / View
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">General Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="fw-bold">Name</label>
                            <p>@Model.Name</p>
                        </div>
                        <div class="col-md-6">
                            <label class="fw-bold">Status</label>
                            <p>
                                <span class="badge @GetStatusBadgeClass(Model.Status)">
                                    @Model.Status
                                </span>
                            </p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="fw-bold">Type</label>
                            <p>@Model.EvidenceType</p>
                        </div>
                        <div class="col-md-4">
                            <label class="fw-bold">Classification</label>
                            <p>
                                <span class="badge @GetClassificationClass(Model.DataClassification)">
                                    @Model.DataClassification
                                </span>
                            </p>
                        </div>
                        <div class="col-md-4">
                            <label class="fw-bold">Source</label>
                            <p>@Model.Source</p>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Description</label>
                        <p>@Model.Description</p>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Location / URL</label>
                        <p class="text-break"><a href="@Model.Location" target="_blank">@Model.Location</a></p>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Metadata</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="fw-bold">Tags</label>
                        <p>
                            @if (!string.IsNullOrEmpty(Model.Tags))
                            {
                                foreach(var tag in Model.Tags.Split(','))
                                {
                                    <span class="badge bg-secondary me-1">@tag.Trim()</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </p>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Notes</label>
                        <p>@(string.IsNullOrEmpty(Model.Notes) ? "-" : Model.Notes)</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Validity & Ownership</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="fw-bold">Owner</label>
                        <p>@Model.Owner</p>
                    </div>
                    <hr />
                    <div class="mb-3">
                        <label class="fw-bold">Collection Date</label>
                        <p>@Model.CollectionDate.ToShortDateString()</p>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Expiration Date</label>
                        <p class="@(Model.ExpirationDate < DateTime.Now ? "text-danger fw-bold" : "")">
                            @(Model.ExpirationDate?.ToShortDateString() ?? "-")
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "active" or "valid" => "bg-success",
            "expired" => "bg-danger",
            "pending" => "bg-warning",
            "archived" => "bg-secondary",
            _ => "bg-info"
        };
    }

    private string GetClassificationClass(string classification)
    {
        return classification?.ToLower() switch
        {
            "public" => "bg-success",
            "internal" => "bg-info",
            "confidential" => "bg-warning text-dark",
            "restricted" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
