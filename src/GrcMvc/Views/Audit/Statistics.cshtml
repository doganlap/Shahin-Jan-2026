@model GrcMvc.Models.DTOs.AuditStatisticsDto
@{
    ViewData["Title"] = "Audit Statistics";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-bar-chart"></i> Audit Statistics</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Audit Metrics -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Audits</h5>
                    <p class="card-text display-4">@Model.TotalAudits</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">Completed</h5>
                    <p class="card-text display-4">@Model.CompletedAudits</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body">
                    <h5 class="card-title">In Progress</h5>
                    <p class="card-text display-4">@Model.InProgressAudits</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger mb-3">
                <div class="card-body">
                    <h5 class="card-title">Overdue</h5>
                    <p class="card-text display-4">@Model.OverdueAudits</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Findings Metrics -->
    <h4 class="mb-3">Findings Overview</h4>
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-danger mb-3">
                <div class="card-header bg-danger text-white">Critical Findings</div>
                <div class="card-body text-danger">
                    <p class="card-text display-4 text-center">@Model.CriticalFindings</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning mb-3">
                <div class="card-header bg-warning text-dark">High Findings</div>
                <div class="card-body text-warning">
                    <p class="card-text display-4 text-center">@Model.HighFindings</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-info mb-3">
                <div class="card-header bg-info text-white">Medium Findings</div>
                <div class="card-body text-info">
                    <p class="card-text display-4 text-center">@Model.MediumFindings</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success mb-3">
                <div class="card-header bg-success text-white">Low Findings</div>
                <div class="card-body text-success">
                    <p class="card-text display-4 text-center">@Model.LowFindings</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4 h-100">
                <div class="card-header">
                    <h5 class="mb-0">Audits by Type</h5>
                </div>
                <div class="card-body">
                    <canvas id="typeChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 h-100">
                <div class="card-header">
                    <h5 class="mb-0">Status Distribution</h5>
                </div>
                <div class="card-body">
                    <canvas id="statusChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 h-100">
                <div class="card-header">
                    <h5 class="mb-0">Finding Severity</h5>
                </div>
                <div class="card-body">
                    <canvas id="findingsChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Type Chart
            var typeCtx = document.getElementById('typeChart').getContext('2d');
            var typeData = @Html.Raw(Json.Serialize(Model.AuditsByType));

            new Chart(typeCtx, {
                type: 'doughnut',
                data: {
                    labels: Object.keys(typeData),
                    datasets: [{
                        data: Object.values(typeData),
                        backgroundColor: [
                            '#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b', '#858796'
                        ]
                    }]
                }
            });

            // Status Chart
            var statusCtx = document.getElementById('statusChart').getContext('2d');
            var statusData = @Html.Raw(Json.Serialize(Model.StatusDistribution));

            new Chart(statusCtx, {
                type: 'pie',
                data: {
                    labels: Object.keys(statusData),
                    datasets: [{
                        data: Object.values(statusData),
                        backgroundColor: [
                            '#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b'
                        ]
                    }]
                }
            });

            // Findings Chart
            var findingsCtx = document.getElementById('findingsChart').getContext('2d');
            new Chart(findingsCtx, {
                type: 'bar',
                data: {
                    labels: ['Critical', 'High', 'Medium', 'Low'],
                    datasets: [{
                        label: 'Number of Findings',
                        data: [@Model.CriticalFindings, @Model.HighFindings, @Model.MediumFindings, @Model.LowFindings],
                        backgroundColor: [
                            '#e74a3b', '#f6c23e', '#36b9cc', '#1cc88a'
                        ]
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                precision: 0
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
        });
    </script>
}
