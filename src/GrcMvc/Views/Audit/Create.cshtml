@model GrcMvc.Models.DTOs.CreateAuditDto
@{
    ViewData["Title"] = "Create Audit";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-plus-circle"></i> Create New Audit</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label fw-bold">Audit Name</label>
                            <input asp-for="Name" class="form-control" placeholder="e.g. FY24 Security Compliance Audit" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label asp-for="AuditNumber" class="control-label fw-bold">Audit Number</label>
                            <input asp-for="AuditNumber" class="form-control" placeholder="e.g. AUD-2024-001" />
                            <span asp-validation-for="AuditNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label asp-for="Type" class="control-label fw-bold">Audit Type</label>
                            <select asp-for="Type" class="form-select">
                                <option value="">Select Type...</option>
                                <option value="Internal">Internal Audit</option>
                                <option value="External">External Audit</option>
                                <option value="Compliance">Compliance Audit</option>
                                <option value="Financial">Financial Audit</option>
                                <option value="IT">IT Audit</option>
                                <option value="Operational">Operational Audit</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="PlannedStartDate" class="control-label fw-bold">Planned Start Date</label>
                            <input asp-for="PlannedStartDate" class="form-control" type="date" />
                            <span asp-validation-for="PlannedStartDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="PlannedEndDate" class="control-label fw-bold">Planned End Date</label>
                            <input asp-for="PlannedEndDate" class="form-control" type="date" />
                            <span asp-validation-for="PlannedEndDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label fw-bold">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Scope" class="control-label fw-bold">Audit Scope</label>
                    <textarea asp-for="Scope" class="form-control" rows="3" placeholder="Define the boundaries and areas to be audited..."></textarea>
                    <span asp-validation-for="Scope" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Objectives" class="control-label fw-bold">Audit Objectives</label>
                    <textarea asp-for="Objectives" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Objectives" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="LeadAuditor" class="control-label fw-bold">Lead Auditor</label>
                            <input asp-for="LeadAuditor" class="form-control" />
                            <span asp-validation-for="LeadAuditor" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="AuditTeam" class="control-label fw-bold">Audit Team Members</label>
                            <input asp-for="AuditTeam" class="form-control" placeholder="Comma separated names" />
                            <span asp-validation-for="AuditTeam" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="Status" class="control-label fw-bold">Status</label>
                            <select asp-for="Status" class="form-select">
                                <option value="Planned">Planned</option>
                                <option value="Scheduled">Scheduled</option>
                                <option value="Draft">Draft</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Create Audit
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
