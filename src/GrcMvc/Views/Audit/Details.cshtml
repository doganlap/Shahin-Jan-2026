@model GrcMvc.Models.DTOs.AuditDto
@{
    ViewData["Title"] = "Audit Details";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-file-text"></i> Audit Details</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">General Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="fw-bold">Audit Name</label>
                            <p>@Model.Name</p>
                        </div>
                        <div class="col-md-6">
                            <label class="fw-bold">Audit Number</label>
                            <p>@Model.AuditNumber</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="fw-bold">Type</label>
                            <p>@Model.Type</p>
                        </div>
                        <div class="col-md-6">
                            <label class="fw-bold">Status</label>
                            <p>
                                <span class="badge @GetStatusBadgeClass(Model.Status)">
                                    @Model.Status
                                </span>
                            </p>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Description</label>
                        <p>@Model.Description</p>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Scope</label>
                        <p>@Model.Scope</p>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Execution Details</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="fw-bold">Objectives</label>
                        <p>@Model.Objectives</p>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Criteria / Standards</label>
                        <p>@Model.Criteria</p>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Methodology</label>
                        <p>@Model.Methodology</p>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.ReportSummary))
                    {
                        <div class="mb-3">
                            <label class="fw-bold">Report Summary</label>
                            <div class="bg-light p-3 rounded">@Model.ReportSummary</div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Timeline & Team</h5>
                </div>
                <div class="card-body">
                    <h6 class="fw-bold text-muted">Schedule</h6>
                    <dl class="row mb-3">
                        <dt class="col-sm-5">Planned Start</dt>
                        <dd class="col-sm-7">@Model.PlannedStartDate.ToShortDateString()</dd>

                        <dt class="col-sm-5">Planned End</dt>
                        <dd class="col-sm-7">@Model.PlannedEndDate.ToShortDateString()</dd>

                        <dt class="col-sm-5">Actual Start</dt>
                        <dd class="col-sm-7">@Model.StartDate.ToShortDateString()</dd>

                        <dt class="col-sm-5">Actual End</dt>
                        <dd class="col-sm-7">@Model.EndDate.ToShortDateString()</dd>
                    </dl>

                    <hr />

                    <h6 class="fw-bold text-muted">Team</h6>
                    <div class="mb-3">
                        <label class="fw-bold">Lead Auditor</label>
                        <p>@Model.LeadAuditor</p>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Assigned To</label>
                        <p>@Model.AssignedTo</p>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Audit Findings</h5>
                        <span class="badge bg-secondary">@Model.FindingsCount</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Findings" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                            <i class="bi bi-list-check"></i> View All Findings
                        </a>
                        <!-- Add finding button typically would go here or in the findings view -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "completed" => "bg-success",
            "inprogress" or "in progress" => "bg-primary",
            "planned" => "bg-info",
            "delayed" or "overdue" => "bg-danger",
            "cancelled" => "bg-secondary",
            _ => "bg-secondary"
        };
    }
}
