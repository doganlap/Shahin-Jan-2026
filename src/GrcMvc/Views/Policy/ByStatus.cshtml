@model IEnumerable<GrcMvc.Models.DTOs.PolicyDto>
@{
    ViewData["Title"] = "Policies by Status";
    Layout = "_Layout";
    var status = ViewBag.Status as string;
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-filter"></i> Policies: @status</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> All Policies
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-search display-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">No policies found with this status.</h4>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover" id="statusTable">
                        <thead>
                            <tr>
                                <th>Number</th>
                                <th>Title</th>
                                <th>Category</th>
                                <th>Type</th>
                                <th>Owner</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id">@item.PolicyNumber</a>
                                    </td>
                                    <td>@item.Title</td>
                                    <td>@item.Category</td>
                                    <td>@item.Type</td>
                                    <td>@item.Owner</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="btn btn-outline-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id"
                                               class="btn btn-outline-info" title="Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
