@model IEnumerable<GrcMvc.Models.DTOs.PolicyDto>
@{
    ViewData["Title"] = "Policies by Category";
    Layout = "_Layout";
    var category = ViewBag.Category as string;
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-filter"></i> Policies: @category</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> All Policies
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-search display-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">No policies found in this category.</h4>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover" id="categoryTable">
                        <thead>
                            <tr>
                                <th>Number</th>
                                <th>Title</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Owner</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id">@item.PolicyNumber</a>
                                    </td>
                                    <td>@item.Title</td>
                                    <td>@item.Type</td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(item.Status)">
                                            @item.Status
                                        </span>
                                    </td>
                                    <td>@item.Owner</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="btn btn-outline-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id"
                                               class="btn btn-outline-info" title="Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    private string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "active" or "published" => "bg-success",
            "draft" => "bg-secondary",
            "review" or "in review" => "bg-warning",
            "archived" or "retired" => "bg-dark",
            "expired" => "bg-danger",
            _ => "bg-info"
        };
    }
}
