@model GrcMvc.Models.DTOs.CreatePolicyDto
@{
    ViewData["Title"] = "Create Policy";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-plus-circle"></i> Create New Policy</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Title" class="control-label fw-bold">Policy Title</label>
                            <input asp-for="Title" class="form-control" placeholder="e.g. Data Protection Policy" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label asp-for="PolicyNumber" class="control-label fw-bold">Policy Number</label>
                            <input asp-for="PolicyNumber" class="form-control" placeholder="e.g. POL-IT-001" />
                            <span asp-validation-for="PolicyNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label asp-for="Status" class="control-label fw-bold">Status</label>
                            <select asp-for="Status" class="form-select">
                                <option value="Draft">Draft</option>
                                <option value="In Review">In Review</option>
                                <option value="Published">Published</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="Category" class="control-label fw-bold">Category</label>
                            <select asp-for="Category" class="form-select">
                                <option value="">Select Category...</option>
                                <option value="Information Security">Information Security</option>
                                <option value="HR">Human Resources</option>
                                <option value="Finance">Finance</option>
                                <option value="Operations">Operations</option>
                                <option value="Legal">Legal & Compliance</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="Type" class="control-label fw-bold">Type</label>
                            <select asp-for="Type" class="form-select">
                                <option value="">Select Type...</option>
                                <option value="Policy">Policy</option>
                                <option value="Procedure">Procedure</option>
                                <option value="Standard">Standard</option>
                                <option value="Guideline">Guideline</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="EffectiveDate" class="control-label fw-bold">Effective Date</label>
                            <input asp-for="EffectiveDate" class="form-control" type="date" />
                            <span asp-validation-for="EffectiveDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label fw-bold">Description / Purpose</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Content" class="control-label fw-bold">Policy Content</label>
                    <textarea asp-for="Content" class="form-control" rows="10" placeholder="Full policy text goes here..."></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Scope" class="control-label fw-bold">Scope</label>
                            <textarea asp-for="Scope" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Scope" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Requirements" class="control-label fw-bold">Key Requirements</label>
                            <textarea asp-for="Requirements" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Requirements" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="Owner" class="control-label fw-bold">Owner</label>
                            <input asp-for="Owner" class="form-control" />
                            <span asp-validation-for="Owner" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="Approver" class="control-label fw-bold">Approver</label>
                            <input asp-for="Approver" class="form-control" />
                            <span asp-validation-for="Approver" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="ReviewDate" class="control-label fw-bold">Next Review Date</label>
                            <input asp-for="ReviewDate" class="form-control" type="date" />
                            <span asp-validation-for="ReviewDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Create Policy
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
