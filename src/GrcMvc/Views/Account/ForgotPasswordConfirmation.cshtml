@{
    ViewData["Title"] = "Forgot Password Confirmation";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card">
                <div class="card-body py-5">
                    <i class="bi bi-envelope-check text-success" style="font-size: 4rem;"></i>
                    <h2 class="mt-3">Check Your Email</h2>
                    <p class="text-muted">Please check your email to reset your password.</p>
                    <hr />
                    <p class="small text-muted">
                        Note: Since email service is not yet configured in this demo, no email was actually sent.
                    </p>
                    <div class="mt-4">
                        <a asp-action="Login" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right"></i> Return to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
