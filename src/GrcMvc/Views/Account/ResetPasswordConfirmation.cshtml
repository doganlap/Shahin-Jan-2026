@{
    ViewData["Title"] = "Password Reset Confirmation";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-success shadow-sm">
                <div class="card-body py-5 text-center">
                    <div class="mb-4">
                        <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
                    </div>

                    <h2 class="card-title text-success mb-3">Password Reset Successful</h2>

                    <p class="card-text text-muted mb-4">
                        Your password has been successfully reset. You can now log in with your new password.
                    </p>

                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle"></i>
                        <small>For security reasons, please use a strong password that includes uppercase letters,
                            numbers, and special characters.</small>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <a asp-action="Login" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right"></i> Log In to Your Account
                        </a>
                    </div>

                    <hr class="my-4" />

                    <p class="text-muted small mb-0">
                        Remember your password? <a asp-action="Login">Go to login</a>
                    </p>
                </div>
            </div>

            <div class="mt-4 text-center">
                <p class="text-muted">
                    <small>
                        If you didn't request a password reset or have any concerns,<br>
                        please <a href="mailto:support@doganconsult.com">contact our support team</a>.
                    </small>
                </p>
            </div>
        </div>
    </div>
</div>