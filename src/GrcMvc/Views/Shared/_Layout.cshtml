@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@inject IOptions<RequestLocalizationOptions> LocOptions
@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCulture?.RequestCulture?.UICulture?.Name ?? "ar";
    var isRtl = currentCulture == "ar";
    var htmlLang = currentCulture;
    var htmlDir = isRtl ? "rtl" : "ltr";
}
<!DOCTYPE html>
<html lang="@htmlLang" dir="@htmlDir">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GRC Management System</title>
    @if (isRtl)
    {
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" />
    }
    else
    {
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    }
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @if (isRtl)
    {
        <link rel="stylesheet" href="~/css/rtl.css" asp-append-version="true" />
    }
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-shield-check"></i> GRC System
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Onboarding" asp-action="Index">
                                <i class="bi bi-rocket"></i> Onboarding
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="OrgSetup" asp-action="Index">
                                <i class="bi bi-building-gear"></i> Org Setup
                            </a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-exclamation-triangle"></i> Risk Management
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Risk" asp-action="Index"><i class="bi bi-exclamation-diamond me-2"></i>Risks</a></li>
                                    <li><a class="dropdown-item" asp-controller="Control" asp-action="Index"><i class="bi bi-shield-check me-2"></i>Controls</a></li>
                                    <li><a class="dropdown-item" asp-controller="Control" asp-action="Matrix"><i class="bi bi-grid-3x3 me-2"></i>Control Matrix</a></li>
                                    <li><a class="dropdown-item" asp-controller="Assessment" asp-action="Index"><i class="bi bi-clipboard-check me-2"></i>Assessments</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Risk" asp-action="Report"><i class="bi bi-bar-chart me-2"></i>Risk Reports</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-clipboard-check"></i> Compliance
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Policy" asp-action="Index"><i class="bi bi-file-text me-2"></i>Policies</a></li>
                                    <li><a class="dropdown-item" asp-controller="Audit" asp-action="Index"><i class="bi bi-search me-2"></i>Audits</a></li>
                                    <li><a class="dropdown-item" asp-controller="Evidence" asp-action="Index"><i class="bi bi-file-earmark-check me-2"></i>Evidence</a></li>
                                    <li><a class="dropdown-item" href="/evidence/lifecycle"><i class="bi bi-arrow-repeat me-2"></i>Evidence Lifecycle</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Policy" asp-action="Statistics"><i class="bi bi-pie-chart me-2"></i>Policy Statistics</a></li>
                                    <li><a class="dropdown-item" asp-controller="Audit" asp-action="Statistics"><i class="bi bi-bar-chart me-2"></i>Audit Statistics</a></li>
                                    <li><a class="dropdown-item" asp-controller="Evidence" asp-action="Statistics"><i class="bi bi-graph-up me-2"></i>Evidence Statistics</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-speedometer2"></i> Dashboards
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="/dashboard"><i class="bi bi-graph-up me-2"></i>Main Dashboard</a></li>
                                    <li><a class="dropdown-item" href="/dashboard/executive"><i class="bi bi-speedometer2 me-2"></i>Executive Dashboard</a></li>
                                    <li><a class="dropdown-item" href="/inbox"><i class="bi bi-inbox me-2"></i>Inbox</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-warning" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-shield-alt"></i> Shahin-AI
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="ShahinAI" asp-action="Index"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a></li>
                                    <li><a class="dropdown-item" asp-controller="ShahinAIIntegration" asp-action="Index"><i class="fas fa-project-diagram me-2 text-info"></i>Integrated Flow</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="ShahinAI" asp-action="Map"><i class="fas fa-map me-2 text-primary"></i>MAP - Control Library</a></li>
                                    <li><a class="dropdown-item" asp-controller="ShahinAI" asp-action="Apply"><i class="fas fa-check-circle me-2 text-success"></i>APPLY - Scope</a></li>
                                    <li><a class="dropdown-item" asp-controller="ShahinAI" asp-action="Prove"><i class="fas fa-file-alt me-2" style="color:#9B59B6;"></i>PROVE - Evidence</a></li>
                                    <li><a class="dropdown-item" asp-controller="ShahinAI" asp-action="Watch"><i class="fas fa-eye me-2 text-danger"></i>WATCH - Monitoring</a></li>
                                    <li><a class="dropdown-item" asp-controller="ShahinAI" asp-action="Fix"><i class="fas fa-wrench me-2 text-warning"></i>FIX - Remediation</a></li>
                                    <li><a class="dropdown-item" asp-controller="ShahinAI" asp-action="Vault"><i class="fas fa-lock me-2" style="color:#1ABC9C;"></i>VAULT - Repository</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-cogs"></i> Manage
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="RoleProfile" asp-action="Index"><i class="fas fa-user-shield me-2 text-primary"></i>Role Profiles</a></li>
                                    <li><a class="dropdown-item" asp-controller="AssessmentTemplate" asp-action="Index"><i class="fas fa-clipboard-list me-2 text-info"></i>Assessment Templates</a></li>
                                    <li><a class="dropdown-item" asp-controller="DocumentFlow" asp-action="Index"><i class="fas fa-file-upload me-2 text-success"></i>Document Flow</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="CCM" asp-action="Index"><i class="fas fa-robot me-2 text-info"></i>CCM Tests</a></li>
                                    <li><a class="dropdown-item" asp-controller="KRIDashboard" asp-action="Index"><i class="fas fa-chart-line me-2 text-danger"></i>KRI/KPI Dashboard</a></li>
                                    <li><a class="dropdown-item" asp-controller="Exception" asp-action="Index"><i class="fas fa-exclamation-triangle me-2 text-warning"></i>Exceptions</a></li>
                                    <li><a class="dropdown-item" asp-controller="AuditPackage" asp-action="Index"><i class="fas fa-archive me-2 text-success"></i>Audit Packages</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Invitation" asp-action="Index"><i class="fas fa-user-plus me-2 text-primary"></i>Invitations</a></li>
                                    <li><a class="dropdown-item" asp-controller="Reports" asp-action="Index"><i class="fas fa-chart-bar me-2" style="color:#9B59B6;"></i>Reports</a></li>
                                    <li><a class="dropdown-item" asp-controller="RoleProfile" asp-action="MyProfile"><i class="fas fa-user me-2"></i>My Profile</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" href="/users">
                                    <i class="bi bi-people"></i> Users
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-diagram-3"></i> Workflows
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Workflow" asp-action="Index"><i class="bi bi-list me-2"></i>All Workflows</a></li>
                                    <li><a class="dropdown-item" asp-controller="Workflow" asp-action="ByStatus" asp-route-status="Active"><i class="bi bi-lightning me-2"></i>Active Workflows</a></li>
                                    <li><a class="dropdown-item" asp-controller="Workflow" asp-action="Statistics"><i class="bi bi-bar-chart me-2"></i>Statistics</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Home" asp-action="Reports">
                                    <i class="bi bi-file-earmark-bar-graph"></i> Reports
                                </a>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-gear"></i> Admin
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="TenantAdmin" asp-action="Index"><i class="fas fa-building me-2 text-primary"></i>Tenant Admin</a></li>
                                        <li><a class="dropdown-item" asp-controller="CatalogAdmin" asp-action="Index"><i class="fas fa-database me-2 text-info"></i>Catalog Admin</a></li>
                                        <li><a class="dropdown-item" asp-controller="RoleDelegation" asp-action="Index"><i class="fas fa-people-arrows me-2 text-success"></i>Role Delegation</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Notifications" asp-action="Index"><i class="fas fa-bell me-2 text-warning"></i>Notifications</a></li>
                                        <li><a class="dropdown-item" asp-controller="Subscription" asp-action="Index"><i class="fas fa-credit-card me-2 text-success"></i>Subscription</a></li>
                                        <li><a class="dropdown-item" asp-controller="Subscription" asp-action="WebhookLogs"><i class="fas fa-plug me-2 text-secondary"></i>Webhook Logs</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Analytics" asp-action="Index"><i class="fas fa-chart-pie me-2" style="color:#9B59B6;"></i>Analytics</a></li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        <!-- Language Switcher -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-globe"></i>
                                @if (isRtl)
                                {
                                    <text>العربية</text>
                                }
                                else
                                {
                                    <text>English</text>
                                }
                            </a>
                            <ul class="dropdown-menu @(isRtl ? "dropdown-menu-start" : "dropdown-menu-end")">
                                <li>
                                    <a class="dropdown-item @(currentCulture == "ar" ? "active" : "")" href="?culture=ar&ui-culture=ar">
                                        <i class="bi bi-translate me-2"></i>العربية
                                        @if (currentCulture == "ar")
                                        {
                                            <i class="bi bi-check-lg float-end"></i>
                                        }
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item @(currentCulture == "en" ? "active" : "")" href="?culture=en&ui-culture=en">
                                        <i class="bi bi-translate me-2"></i>English
                                        @if (currentCulture == "en")
                                        {
                                            <i class="bi bi-check-lg float-end"></i>
                                        }
                                    </a>
                                </li>
                            </ul>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu @(isRtl ? "dropdown-menu-start" : "dropdown-menu-end")">
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">@(isRtl ? "الملف الشخصي" : "Profile")</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item">@(isRtl ? "تسجيل الخروج" : "Logout")</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <!-- Alert Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-circle"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center py-3">
            &copy; @DateTime.Now.Year - GRC Management System - Version 1.0.0
        </div>
    </footer>

    @* Support Chat Widget *@
    @await Html.PartialAsync("_SupportChatWidget")

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/language-switcher.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
