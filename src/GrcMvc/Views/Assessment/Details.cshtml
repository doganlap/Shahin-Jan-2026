@model GrcMvc.Models.DTOs.AssessmentDto
@{
    ViewData["Title"] = "Assessment Details";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-file-text"></i> Assessment Details</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">General Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="fw-bold">Name</label>
                            <p>@Model.Name</p>
                        </div>
                        <div class="col-md-6">
                            <label class="fw-bold">Assessment Number</label>
                            <p>@Model.AssessmentNumber</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="fw-bold">Type</label>
                            <p>@Model.Type</p>
                        </div>
                        <div class="col-md-6">
                            <label class="fw-bold">Status</label>
                            <p>
                                <span class="badge @GetStatusBadgeClass(Model.Status)">
                                    @Model.Status
                                </span>
                            </p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-12">
                            <label class="fw-bold">Description</label>
                            <p>@Model.Description</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Results & Findings</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="fw-bold">Compliance Score</label>
                            <p>
                                @if (Model.ComplianceScore.HasValue)
                                {
                                    <span class="badge @GetScoreBadgeClass(Model.ComplianceScore.Value)">
                                        @Model.ComplianceScore%
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">Not scored</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="fw-bold">Reviewed By</label>
                            <p>@(string.IsNullOrEmpty(Model.ReviewedBy) ? "-" : Model.ReviewedBy)</p>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">Results</label>
                        @if (!string.IsNullOrEmpty(Model.Results))
                        {
                            <div class="bg-light p-3 rounded">@Model.Results</div>
                        }
                        else
                        {
                            <p class="text-muted">No results recorded.</p>
                        }
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">Findings</label>
                        @if (!string.IsNullOrEmpty(Model.Findings))
                        {
                            <div class="bg-light p-3 rounded">@Model.Findings</div>
                        }
                        else
                        {
                            <p class="text-muted">No findings recorded.</p>
                        }
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">Recommendations</label>
                        @if (!string.IsNullOrEmpty(Model.Recommendations))
                        {
                            <div class="bg-light p-3 rounded">@Model.Recommendations</div>
                        }
                        else
                        {
                            <p class="text-muted">No recommendations recorded.</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Schedule & Assignment</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="fw-bold">Start Date</label>
                        <p>@Model.StartDate.ToShortDateString()</p>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">End Date</label>
                        <p>@(Model.EndDate?.ToShortDateString() ?? "-")</p>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Assigned To</label>
                        <p>@Model.AssignedTo</p>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Related Items</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="fw-bold">Related Risk</label>
                        <p>
                            @if (Model.RiskId.HasValue)
                            {
                                <a asp-controller="Risk" asp-action="Details" asp-route-id="@Model.RiskId">View Risk</a>
                            }
                            else
                            {
                                <span class="text-muted">None</span>
                            }
                        </p>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Related Control</label>
                        <p>
                            @if (Model.ControlId.HasValue)
                            {
                                <a asp-controller="Control" asp-action="Details" asp-route-id="@Model.ControlId">View Control</a>
                            }
                            else
                            {
                                <span class="text-muted">None</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "completed" => "bg-success",
            "inprogress" or "in progress" => "bg-primary",
            "planned" => "bg-info",
            "delayed" or "overdue" => "bg-danger",
            "cancelled" => "bg-secondary",
            _ => "bg-secondary"
        };
    }

    private string GetScoreBadgeClass(int score)
    {
        return score switch
        {
            >= 90 => "bg-success",
            >= 70 => "bg-info",
            >= 50 => "bg-warning",
            _ => "bg-danger"
        };
    }
}
