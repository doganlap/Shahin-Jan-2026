@model GrcMvc.Models.DTOs.AssessmentDto
@{
    ViewData["Title"] = "Delete Assessment";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Delete Confirmation</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title text-danger">Are you sure you want to delete this assessment?</h5>
                    <p class="card-text">This action cannot be undone. The assessment <strong>@Model.Name (@Model.AssessmentNumber)</strong> will be permanently deleted.</p>

                    <dl class="row mt-4">
                        <dt class="col-sm-4">Assessment Number</dt>
                        <dd class="col-sm-8">@Model.AssessmentNumber</dd>

                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Type</dt>
                        <dd class="col-sm-8">@Model.Type</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">@Model.Status</dd>

                        <dt class="col-sm-4">Assigned To</dt>
                        <dd class="col-sm-8">@Model.AssignedTo</dd>

                        <dt class="col-sm-4">Start Date</dt>
                        <dd class="col-sm-8">@Model.StartDate.ToShortDateString()</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete Assessment
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
