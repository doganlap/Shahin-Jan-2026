@model IEnumerable<GrcMvc.Models.DTOs.AssessmentDto>
@{
    ViewData["Title"] = "Assessments for Control";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="bi bi-clipboard-check"></i> Assessments for Control</h2>
        </div>
        <div class="col text-end">
            @if (ViewBag.ControlId != null)
            {
                <a asp-controller="Control" asp-action="Details" asp-route-id="@ViewBag.ControlId" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Control
                </a>
            }
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-list"></i> All Assessments
            </a>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-clipboard-x display-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">No assessments found for this control.</h4>
                    @if (ViewBag.ControlId != null)
                    {
                        <a asp-action="Create" asp-route-controlId="@ViewBag.ControlId" class="btn btn-primary mt-3">
                            <i class="bi bi-plus-circle"></i> Create Assessment for Control
                        </a>
                    }
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover" id="controlAssessmentsTable">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Number</th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Score</th>
                                <th>Reviewer</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.StartDate.ToShortDateString()</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id">@item.AssessmentNumber</a>
                                    </td>
                                    <td>@item.Name</td>
                                    <td>@item.Type</td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(item.Status)">
                                            @item.Status
                                        </span>
                                    </td>
                                    <td>
                                        @if (item.ComplianceScore.HasValue)
                                        {
                                            <span class="badge @GetScoreBadgeClass(item.ComplianceScore.Value)">
                                                @item.ComplianceScore%
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@item.ReviewedBy</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="btn btn-outline-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id"
                                               class="btn btn-outline-info" title="Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    private string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "completed" => "bg-success",
            "inprogress" or "in progress" => "bg-primary",
            "planned" => "bg-info",
            "delayed" or "overdue" => "bg-danger",
            "cancelled" => "bg-secondary",
            _ => "bg-secondary"
        };
    }

    private string GetScoreBadgeClass(int score)
    {
        return score switch
        {
            >= 90 => "bg-success",
            >= 70 => "bg-info",
            >= 50 => "bg-warning",
            _ => "bg-danger"
        };
    }
}
