@using Grc.Application.Policy
@inject IJSRuntime JSRuntime

<div class="modal fade @(Show ? "show" : "")" style="display: @(Show ? "block" : "none")">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">سبب الرفض</h5>
                <button type="button" class="btn-close" @onclick="Close"></button>
            </div>
            <div class="modal-body">
                @if (Violation != null)
                {
                    <div class="alert alert-danger">
                        <strong>@Violation.Message</strong>
                    </div>
                    @if (!string.IsNullOrEmpty(Violation.RemediationHint))
                    {
                        <div class="alert alert-info">
                            <strong>الحل المقترح:</strong> @Violation.RemediationHint
                        </div>
                    }
                    @if (Violation.RuleId != null)
                    {
                        <div class="text-muted">
                            <small>Rule ID: @Violation.RuleId</small>
                        </div>
                    }
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="Close">إغلاق</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public bool Show { get; set; }
    [Parameter] public PolicyViolationException? Violation { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }

    private void Close()
    {
        Show = false;
        OnClose.InvokeAsync();
    }
}
