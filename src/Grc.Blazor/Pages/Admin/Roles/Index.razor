@page "/admin/roles"
@page "/admin/roles/index"
@using Grc.Application.Contracts.Admin.RoleManagement
@using Volo.Abp.Application.Dtos
@attribute [Authorize(Grc.Permissions.GrcPermissions.Admin.Roles)]

<PageTitle>إدارة الأدوار</PageTitle>

<h3>إدارة الأدوار</h3>

<div class="mb-3">
    <a href="/admin/roles/create" class="btn btn-primary">إضافة دور جديد</a>
</div>

@if (loading)
{
    <p>جاري التحميل...</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>اسم الدور</th>
                    <th>افتراضي</th>
                    <th>ثابت</th>
                    <th>عام</th>
                    <th>عدد المستخدمين</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in roles.Items)
                {
                    <tr>
                        <td>@role.Name</td>
                        <td>@(role.IsDefault ? "✓" : "")</td>
                        <td>@(role.IsStatic ? "✓" : "")</td>
                        <td>@(role.IsPublic ? "✓" : "")</td>
                        <td>@role.UserCount</td>
                        <td>
                            <a href="/admin/roles/@role.Id/edit" class="btn btn-sm btn-primary">تعديل</a>
                            @if (!role.IsStatic)
                            {
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteRole(role.Id)">حذف</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private PagedResultDto<RoleDto> roles = new();
    private bool loading = true;

    [Inject]
    private IRoleManagementAppService RoleManagementAppService { get; set; } = null!;

    protected override async Task OnInitializedAsync()
    {
        await LoadRoles();
    }

    private async Task LoadRoles()
    {
        loading = true;
        try
        {
            var input = new RoleListInputDto
            {
                MaxResultCount = 100
            };
            roles = await RoleManagementAppService.GetListAsync(input);
        }
        catch (Exception ex)
        {
            // TODO: Handle error properly
            Console.WriteLine($"Error loading roles: {ex.Message}");
        }
        finally
        {
            loading = false;
        }
    }

    private async Task DeleteRole(Guid id)
    {
        // TODO: Add confirmation dialog
        try
        {
            await RoleManagementAppService.DeleteAsync(id);
            await LoadRoles();
        }
        catch (Exception ex)
        {
            // TODO: Handle error properly
            Console.WriteLine($"Error deleting role: {ex.Message}");
        }
    }
}
