@page "/admin/roles/{Id:guid}/edit"
@using Grc.Application.Contracts.Admin.RoleManagement
@attribute [Authorize(Grc.Permissions.GrcPermissions.Admin.Roles)]

<PageTitle>تعديل دور</PageTitle>

<h3>تعديل دور</h3>

@if (loading)
{
    <p>جاري التحميل...</p>
}
else if (role != null)
{
    <EditForm Model="@updateInput" OnValidSubmit="@UpdateRole">
        <DataAnnotationsValidator />
        
        <div class="mb-3">
            <label class="form-label">اسم الدور *</label>
            <InputText @bind-Value="updateInput.Name" class="form-control" />
            <ValidationMessage For="@(() => updateInput.Name)" />
        </div>

        <div class="mb-3">
            <InputCheckbox @bind-Value="updateInput.IsDefault" class="form-check-input" />
            <label class="form-check-label">افتراضي</label>
        </div>

        <div class="mb-3">
            <InputCheckbox @bind-Value="updateInput.IsPublic" class="form-check-input" />
            <label class="form-check-label">عام</label>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">حفظ</button>
            <a href="/admin/roles" class="btn btn-secondary">إلغاء</a>
        </div>
    </EditForm>
}

@code {
    [Parameter]
    public Guid Id { get; set; }

    private RoleDto? role;
    private UpdateRoleDto updateInput = new();
    private bool loading = true;

    [Inject]
    private IRoleManagementAppService RoleManagementAppService { get; set; } = null!;
    [Inject]
    private NavigationManager NavigationManager { get; set; } = null!;

    protected override async Task OnInitializedAsync()
    {
        await LoadRole();
    }

    private async Task LoadRole()
    {
        loading = true;
        try
        {
            role = await RoleManagementAppService.GetAsync(Id);
            updateInput.Name = role.Name;
            updateInput.IsDefault = role.IsDefault;
            updateInput.IsPublic = role.IsPublic;
            updateInput.Permissions = role.Permissions.ToList();
        }
        catch (Exception ex)
        {
            // TODO: Handle error properly
            Console.WriteLine($"Error loading role: {ex.Message}");
        }
        finally
        {
            loading = false;
        }
    }

    private async Task UpdateRole()
    {
        try
        {
            await RoleManagementAppService.UpdateAsync(Id, updateInput);
            NavigationManager.NavigateTo("/admin/roles");
        }
        catch (Exception ex)
        {
            // TODO: Handle error properly
            Console.WriteLine($"Error updating role: {ex.Message}");
        }
    }
}
