@page "/admin/roles/profiles"
@using Grc.Application.Contracts.Roles
@using Grc.Permissions
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(GrcPermissions.Admin.Roles)]

<PageTitle>ملفات الأدوار المحددة مسبقاً</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>ملفات الأدوار المحددة مسبقاً</h3>
    <a href="/admin/roles" class="btn btn-secondary">العودة إلى قائمة الأدوار</a>
</div>

<div class="alert alert-info">
    <i class="fas fa-info-circle"></i>
    ملفات الأدوار المحددة مسبقاً توفر قوالب جاهزة لإنشاء أدوار جديدة مع الصلاحيات المناسبة. يمكنك إنشاء دور جديد من أي ملف أو عرض تفاصيل الصلاحيات.
</div>

@if (isLoading)
{
    <p>جاري التحميل...</p>
}
else if (profiles != null && profiles.Any())
{
    <div class="row">
        @foreach (var profile in profiles)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header">
                        <h5 class="card-title mb-0">@profile.DisplayName</h5>
                        <small class="text-muted">@profile.Name</small>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@profile.Description</p>
                        
                        <div class="mb-2">
                            <strong>SLA:</strong>
                            <span class="badge bg-info">@profile.SLA</span>
                        </div>

                        <div class="mb-2">
                            <strong>عدد المستخدمين:</strong>
                            <span class="badge bg-secondary">@profile.UserCount</span>
                        </div>

                        <div class="mb-2">
                            <strong>الحالة:</strong>
                            @if (profile.IsPublic)
                            {
                                <span class="badge bg-success">عام</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">خاص</span>
                            }
                            @if (profile.IsDefault)
                            {
                                <span class="badge bg-primary">افتراضي</span>
                            }
                        </div>

                        <div class="mb-2">
                            <strong>عدد الصلاحيات:</strong>
                            <span class="badge bg-primary">@profile.Permissions.Count</span>
                        </div>

                        <div class="d-flex gap-2 flex-wrap">
                            <button class="btn btn-sm btn-info" @onclick="() => ShowPermissions(profile)">
                                <i class="fas fa-key"></i> عرض الصلاحيات
                            </button>
                            @if (profile.Id == Guid.Empty)
                            {
                                <button class="btn btn-sm btn-success" @onclick="() => CreateRoleFromProfile(profile)">
                                    <i class="fas fa-plus"></i> إنشاء الدور
                                </button>
                            }
                            else
                            {
                                <a href="/admin/roles/edit/@profile.Id" class="btn btn-sm btn-secondary">
                                    <i class="fas fa-edit"></i> تعديل
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else if (!isLoading)
{
    <p>لا توجد ملفات أدوار</p>
}

@if (showPermissionsDialog && selectedProfile != null)
{
    <div class="modal fade show" style="display: block;" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">صلاحيات: @selectedProfile.DisplayName</h5>
                    <button type="button" class="btn-close" @onclick="ClosePermissionsDialog"></button>
                </div>
                <div class="modal-body">
                    <p><strong>الوصف:</strong> @selectedProfile.Description</p>
                    <p><strong>SLA:</strong> @selectedProfile.SLA</p>
                    
                    <h6>الصلاحيات (@selectedProfile.Permissions.Count):</h6>
                    <div class="list-group" style="max-height: 400px; overflow-y: auto;">
                        @foreach (var permission in selectedProfile.Permissions.OrderBy(p => p))
                        {
                            <div class="list-group-item">
                                <code>@permission</code>
                            </div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="ClosePermissionsDialog">إغلاق</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

<ErrorDialog @bind-Error="currentError" />

@code {
    [Inject] private Grc.Application.Contracts.Roles.IRoleProfileAppService RoleProfileAppService { get; set; } = null!;
    [Inject] private ErrorToastService ErrorToastService { get; set; } = null!;
    
    private List<RoleProfileDto>? profiles;
    private bool isLoading = true;
    private bool showPermissionsDialog = false;
    private RoleProfileDto? selectedProfile;
    private ErrorResponseDto? currentError;

    protected override async Task OnInitializedAsync()
    {
        await LoadProfilesAsync();
    }

    private async Task LoadProfilesAsync()
    {
        try
        {
            isLoading = true;
            profiles = await RoleProfileAppService.GetAllProfilesAsync();
        }
        catch (Exception ex)
        {
            currentError = new ErrorResponseDto
            {
                Message = "فشل تحميل ملفات الأدوار",
                Details = ex.Message
            };
            await ErrorToastService.ShowErrorAsync("فشل التحميل", ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowPermissions(RoleProfileDto profile)
    {
        selectedProfile = profile;
        showPermissionsDialog = true;
    }

    private void ClosePermissionsDialog()
    {
        showPermissionsDialog = false;
        selectedProfile = null;
    }

    private async Task CreateRoleFromProfile(RoleProfileDto profile)
    {
        try
        {
            var input = new CreateRoleFromProfileDto
            {
                ProfileName = profile.Name,
                IsPublic = true,
                IsDefault = false
            };

            await RoleProfileAppService.CreateRoleFromProfileAsync(input);
            await ErrorToastService.ShowSuccessAsync($"تم إنشاء الدور '{profile.DisplayName}' بنجاح");
            await LoadProfilesAsync();
        }
        catch (Exception ex)
        {
            currentError = new ErrorResponseDto
            {
                Message = $"فشل إنشاء الدور '{profile.DisplayName}'",
                Details = ex.Message
            };
            await ErrorToastService.ShowErrorAsync("فشل الإنشاء", ex.Message);
        }
    }
}
