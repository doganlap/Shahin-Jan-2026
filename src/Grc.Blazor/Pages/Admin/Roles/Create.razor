@page "/admin/roles/create"
@using Grc.Application.Contracts.Admin.RoleManagement
@attribute [Authorize(Grc.Permissions.GrcPermissions.Admin.Roles)]

<PageTitle>إضافة دور جديد</PageTitle>

<h3>إضافة دور جديد</h3>

<EditForm Model="@createInput" OnValidSubmit="@CreateRole">
    <DataAnnotationsValidator />
    
    <div class="mb-3">
        <label class="form-label">اسم الدور *</label>
        <InputText @bind-Value="createInput.Name" class="form-control" />
        <ValidationMessage For="@(() => createInput.Name)" />
    </div>

    <div class="mb-3">
        <InputCheckbox @bind-Value="createInput.IsDefault" class="form-check-input" />
        <label class="form-check-label">افتراضي</label>
    </div>

    <div class="mb-3">
        <InputCheckbox @bind-Value="createInput.IsPublic" class="form-check-input" />
        <label class="form-check-label">عام</label>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">حفظ</button>
        <a href="/admin/roles" class="btn btn-secondary">إلغاء</a>
    </div>
</EditForm>

@code {
    private CreateRoleDto createInput = new();

    [Inject]
    private IRoleManagementAppService RoleManagementAppService { get; set; } = null!;
    [Inject]
    private NavigationManager NavigationManager { get; set; } = null!;

    private async Task CreateRole()
    {
        try
        {
            await RoleManagementAppService.CreateAsync(createInput);
            NavigationManager.NavigateTo("/admin/roles");
        }
        catch (Exception ex)
        {
            // TODO: Handle error properly
            Console.WriteLine($"Error creating role: {ex.Message}");
        }
    }
}
