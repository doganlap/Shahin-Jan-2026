@page "/admin/tenants"
@using Grc.Application.Contracts.Admin.TenantManagement
@using Volo.Abp.Application.Dtos
@attribute [Authorize(Grc.Permissions.GrcPermissions.Admin.Tenants)]

<PageTitle>إدارة العملاء</PageTitle>

<h3>إدارة العملاء</h3>

@if (loading)
{
    <p>جاري التحميل...</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>اسم العميل</th>
                    <th>الحالة</th>
                    <th>تاريخ الإنشاء</th>
                    <th>تاريخ الانتهاء</th>
                    <th>عدد المستخدمين</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tenant in tenants.Items)
                {
                    <tr>
                        <td>@tenant.Name</td>
                        <td>
                            @if (tenant.IsActive)
                            {
                                <span class="badge bg-success">نشط</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">غير نشط</span>
                            }
                        </td>
                        <td>@tenant.CreationTime?.ToString("yyyy-MM-dd")</td>
                        <td>@(tenant.ExpirationDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                        <td>@tenant.UserCount</td>
                        <td>
                            <a href="/admin/tenants/@tenant.Id" class="btn btn-sm btn-primary">تفاصيل</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private PagedResultDto<TenantDto> tenants = new();
    private bool loading = true;

    [Inject]
    private ITenantManagementAppService TenantManagementAppService { get; set; } = null!;

    protected override async Task OnInitializedAsync()
    {
        await LoadTenants();
    }

    private async Task LoadTenants()
    {
        loading = true;
        try
        {
            var input = new TenantListInputDto
            {
                MaxResultCount = 100
            };
            tenants = await TenantManagementAppService.GetListAsync(input);
        }
        catch (Exception ex)
        {
            // TODO: Handle error properly
            Console.WriteLine($"Error loading tenants: {ex.Message}");
        }
        finally
        {
            loading = false;
        }
    }
}
