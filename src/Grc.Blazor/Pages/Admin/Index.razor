@page "/admin"
@using Grc.Application.Contracts.Admin
@attribute [Authorize(Grc.Permissions.GrcPermissions.Admin.Access)]

<PageTitle>لوحة تحكم الإدارة</PageTitle>

<h3>لوحة تحكم الإدارة</h3>

@if (loading)
{
    <p>جاري التحميل...</p>
}
else if (dashboard != null)
{
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">المستخدمون</h5>
                    <h2>@dashboard.TotalUsers</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">الأدوار</h5>
                    <h2>@dashboard.TotalRoles</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">العملاء</h5>
                    <h2>@dashboard.TotalTenants</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">الاشتراكات النشطة</h5>
                    <h2>@dashboard.ActiveSubscriptions</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>الأنشطة الأخيرة</h5>
                </div>
                <div class="card-body">
                    @if (dashboard.RecentActivities.Any())
                    {
                        <ul class="list-group">
                            @foreach (var activity in dashboard.RecentActivities)
                            {
                                <li class="list-group-item">
                                    <strong>@activity.Type</strong> - @activity.Description
                                    <small class="text-muted">@activity.CreatedAt</small>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>لا توجد أنشطة حديثة</p>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    private AdminDashboardDto? dashboard;
    private bool loading = true;

    [Inject]
    private IAdminAppService AdminAppService { get; set; } = null!;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            dashboard = await AdminAppService.GetDashboardAsync();
        }
        catch (Exception ex)
        {
            // TODO: Handle error properly
            Console.WriteLine($"Error loading dashboard: {ex.Message}");
        }
        finally
        {
            loading = false;
        }
    }
}
