@page "/admin/users"
@using Grc.Application.Contracts.Admin.UserManagement
@using Volo.Abp.Application.Dtos
@attribute [Authorize(Grc.Permissions.GrcPermissions.Admin.Users)]

<PageTitle>إدارة المستخدمين</PageTitle>

<h3>إدارة المستخدمين</h3>

<div class="mb-3">
    <a href="/admin/users/create" class="btn btn-primary">إضافة مستخدم جديد</a>
</div>

@if (loading)
{
    <p>جاري التحميل...</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>اسم المستخدم</th>
                    <th>البريد الإلكتروني</th>
                    <th>الاسم</th>
                    <th>الحالة</th>
                    <th>الأدوار</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in users.Items)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.Name @user.Surname</td>
                        <td>
                            @if (user.IsActive)
                            {
                                <span class="badge bg-success">نشط</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">غير نشط</span>
                            }
                        </td>
                        <td>
                            @string.Join(", ", user.Roles)
                        </td>
                        <td>
                            <a href="/admin/users/@user.Id/edit" class="btn btn-sm btn-primary">تعديل</a>
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteUser(user.Id)">حذف</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (users.TotalCount > users.Items.Count)
    {
        <nav>
            <ul class="pagination">
                <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
                    <a class="page-link" @onclick="() => LoadUsers(currentPage - 1)">السابق</a>
                </li>
                <li class="page-item @(currentPage * pageSize >= users.TotalCount ? "disabled" : "")">
                    <a class="page-link" @onclick="() => LoadUsers(currentPage + 1)">التالي</a>
                </li>
            </ul>
        </nav>
    }
}

@code {
    private PagedResultDto<UserDto> users = new();
    private bool loading = true;
    private int currentPage = 1;
    private int pageSize = 10;

    [Inject]
    private IUserManagementAppService UserManagementAppService { get; set; } = null!;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers(1);
    }

    private async Task LoadUsers(int page)
    {
        loading = true;
        try
        {
            currentPage = page;
            var input = new UserListInputDto
            {
                MaxResultCount = pageSize,
                SkipCount = (page - 1) * pageSize
            };
            users = await UserManagementAppService.GetListAsync(input);
        }
        catch (Exception ex)
        {
            // TODO: Handle error properly
            Console.WriteLine($"Error loading users: {ex.Message}");
        }
        finally
        {
            loading = false;
        }
    }

    private async Task DeleteUser(Guid id)
    {
        // TODO: Add confirmation dialog
        try
        {
            await UserManagementAppService.DeleteAsync(id);
            await LoadUsers(currentPage);
        }
        catch (Exception ex)
        {
            // TODO: Handle error properly
            Console.WriteLine($"Error deleting user: {ex.Message}");
        }
    }
}
