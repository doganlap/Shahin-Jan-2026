@page "/policies/create"
@using Grc.Application.Contracts.PolicyDocument
@using Grc.Permissions
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(GrcPermissions.Policies.Manage)]

<PageTitle>إضافة سياسة جديدة</PageTitle>

<h3>إضافة سياسة جديدة</h3>

<EditForm Model="@createInput" OnValidSubmit="@CreatePolicy">
    <DataAnnotationsValidator />
    
    <div class="mb-3">
        <label class="form-label">الاسم *</label>
        <InputText @bind-Value="createInput.Name" class="form-control" />
        <ValidationMessage For="@(() => createInput.Name)" />
    </div>

    <div class="mb-3">
        <label class="form-label">الوصف</label>
        <InputTextArea @bind-Value="createInput.Description" class="form-control" rows="3" />
    </div>

    <div class="mb-3">
        <label class="form-label">المالك</label>
        <InputText @bind-Value="createInput.Owner" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">تصنيف البيانات</label>
        <InputSelect @bind-Value="createInput.DataClassification" class="form-select">
            <option value="">اختر...</option>
            <option value="public">عام</option>
            <option value="internal">داخلي</option>
            <option value="confidential">سري</option>
            <option value="restricted">مقيد</option>
        </InputSelect>
    </div>

    <div class="mb-3">
        <InputCheckbox @bind-Value="createInput.ApprovedForProd" class="form-check-input" />
        <label class="form-check-label">معتمد للإنتاج</label>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary" disabled="@isSubmitting">حفظ</button>
        <a href="/policies" class="btn btn-secondary">إلغاء</a>
    </div>
</EditForm>

<ErrorDialog @bind-Error="currentError" />

@code {
    [Inject] private IPolicyDocumentAppService PolicyDocumentAppService { get; set; } = null!;
    [Inject] private ErrorToastService ErrorToastService { get; set; } = null!;
    [Inject] private NavigationManager NavigationManager { get; set; } = null!;
    
    private CreatePolicyDocumentDto createInput = new();
    private bool isSubmitting = false;
    private ErrorResponseDto? currentError;

    private async Task CreatePolicy()
    {
        try
        {
            isSubmitting = true;
            await PolicyDocumentAppService.CreateAsync(createInput);
            await ErrorToastService.ShowSuccessAsync("تم إنشاء السياسة بنجاح");
            NavigationManager.NavigateTo("/policies");
        }
        catch (Exception ex)
        {
            currentError = new ErrorResponseDto { Message = "فشل إنشاء السياسة", Details = ex.Message };
            await ErrorToastService.ShowErrorAsync("فشل الإنشاء", ex.Message);
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
