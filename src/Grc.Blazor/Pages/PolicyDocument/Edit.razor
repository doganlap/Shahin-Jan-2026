@page "/policies/edit/{Id:guid}"
@using Grc.Application.Contracts.PolicyDocument
@using Grc.Permissions
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(GrcPermissions.Policies.Manage)]

<PageTitle>تعديل السياسة</PageTitle>

<h3>تعديل السياسة</h3>

@if (isLoading)
{
    <p>جاري التحميل...</p>
}
else if (item != null)
{
    <EditForm Model="@updateInput" OnValidSubmit="@UpdatePolicy">
        <DataAnnotationsValidator />
        
        <div class="mb-3">
            <label class="form-label">الاسم *</label>
            <InputText @bind-Value="updateInput.Name" class="form-control" />
            <ValidationMessage For="@(() => updateInput.Name)" />
        </div>

        <div class="mb-3">
            <label class="form-label">الوصف</label>
            <InputTextArea @bind-Value="updateInput.Description" class="form-control" rows="3" />
        </div>

        <div class="mb-3">
            <label class="form-label">المالك</label>
            <InputText @bind-Value="updateInput.Owner" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">تصنيف البيانات</label>
            <InputSelect @bind-Value="updateInput.DataClassification" class="form-select">
                <option value="">اختر...</option>
                <option value="public">عام</option>
                <option value="internal">داخلي</option>
                <option value="confidential">سري</option>
                <option value="restricted">مقيد</option>
            </InputSelect>
        </div>

        <div class="mb-3">
            <InputCheckbox @bind-Value="updateInput.ApprovedForProd" class="form-check-input" />
            <label class="form-check-label">معتمد للإنتاج</label>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">حفظ</button>
            <a href="/policies" class="btn btn-secondary">إلغاء</a>
        </div>
    </EditForm>
}

<ErrorDialog @bind-Error="currentError" />

@code {
    [Parameter] public Guid Id { get; set; }
    
    [Inject] private IPolicyDocumentAppService PolicyDocumentAppService { get; set; } = null!;
    [Inject] private ErrorToastService ErrorToastService { get; set; } = null!;
    [Inject] private NavigationManager NavigationManager { get; set; } = null!;
    
    private PolicyDocumentDto? item;
    private UpdatePolicyDocumentDto updateInput = new();
    private bool isLoading = true;
    private bool isSubmitting = false;
    private ErrorResponseDto? currentError;

    protected override async Task OnInitializedAsync()
    {
        await LoadItemAsync();
    }

    private async Task LoadItemAsync()
    {
        try
        {
            isLoading = true;
            item = await PolicyDocumentAppService.GetAsync(Id);
            updateInput = new UpdatePolicyDocumentDto
            {
                Name = item.Name,
                Description = item.Description,
                Owner = item.Owner,
                DataClassification = item.DataClassification,
                ApprovedForProd = item.ApprovedForProd
            };
        }
        catch (Exception ex)
        {
            currentError = new ErrorResponseDto { Message = "فشل تحميل السياسة", Details = ex.Message };
            await ErrorToastService.ShowErrorAsync("فشل التحميل", ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task UpdatePolicy()
    {
        try
        {
            isSubmitting = true;
            await PolicyDocumentAppService.UpdateAsync(Id, updateInput);
            await ErrorToastService.ShowSuccessAsync("تم تحديث السياسة بنجاح");
            NavigationManager.NavigateTo("/policies");
        }
        catch (Exception ex)
        {
            currentError = new ErrorResponseDto { Message = "فشل تحديث السياسة", Details = ex.Message };
            await ErrorToastService.ShowErrorAsync("فشل التحديث", ex.Message);
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
