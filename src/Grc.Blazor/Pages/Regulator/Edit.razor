@page "/regulators/edit/{Id:guid}"
@using Grc.Application.Contracts.Regulator
@using Grc.Permissions
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(GrcPermissions.Regulators.Manage)]

<PageTitle>تعديل الجهة التنظيمية</PageTitle>

<h3>تعديل الجهة التنظيمية</h3>

@if (isLoading)
{
    <p>جاري التحميل...</p>
}
else if (item != null)
{
    <EditForm Model="@updateInput" OnValidSubmit="@UpdateRegulator">
        <DataAnnotationsValidator />
        
        <div class="mb-3">
            <label class="form-label">الاسم *</label>
            <InputText @bind-Value="updateInput.Name" class="form-control" />
            <ValidationMessage For="@(() => updateInput.Name)" />
        </div>

        <div class="mb-3">
            <label class="form-label">الوصف</label>
            <InputTextArea @bind-Value="updateInput.Description" class="form-control" rows="3" />
        </div>

        <div class="mb-3">
            <label class="form-label">نوع الجهة</label>
            <InputText @bind-Value="updateInput.RegulatorType" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">البلد</label>
            <InputText @bind-Value="updateInput.Country" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">المنطقة</label>
            <InputText @bind-Value="updateInput.Region" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">البريد الإلكتروني</label>
            <InputText type="email" @bind-Value="updateInput.ContactEmail" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">رقم الهاتف</label>
            <InputText @bind-Value="updateInput.ContactPhone" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">الموقع الإلكتروني</label>
            <InputText @bind-Value="updateInput.Website" class="form-control" />
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">حفظ</button>
            <a href="/regulators" class="btn btn-secondary">إلغاء</a>
        </div>
    </EditForm>
}

<ErrorDialog @bind-Error="currentError" />

@code {
    [Parameter] public Guid Id { get; set; }
    
    [Inject] private IRegulatorAppService RegulatorAppService { get; set; } = null!;
    [Inject] private ErrorToastService ErrorToastService { get; set; } = null!;
    [Inject] private NavigationManager NavigationManager { get; set; } = null!;
    
    private RegulatorDto? item;
    private UpdateRegulatorDto updateInput = new();
    private bool isLoading = true;
    private bool isSubmitting = false;
    private ErrorResponseDto? currentError;

    protected override async Task OnInitializedAsync()
    {
        await LoadItemAsync();
    }

    private async Task LoadItemAsync()
    {
        try
        {
            isLoading = true;
            item = await RegulatorAppService.GetAsync(Id);
            updateInput = new UpdateRegulatorDto
            {
                Name = item.Name,
                Description = item.Description,
                RegulatorType = item.RegulatorType,
                Country = item.Country,
                Region = item.Region,
                ContactEmail = item.ContactEmail,
                ContactPhone = item.ContactPhone,
                Website = item.Website
            };
        }
        catch (Exception ex)
        {
            currentError = new ErrorResponseDto { Message = "فشل تحميل الجهة التنظيمية", Details = ex.Message };
            await ErrorToastService.ShowErrorAsync("فشل التحميل", ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task UpdateRegulator()
    {
        try
        {
            isSubmitting = true;
            await RegulatorAppService.UpdateAsync(Id, updateInput);
            await ErrorToastService.ShowSuccessAsync("تم تحديث الجهة التنظيمية بنجاح");
            NavigationManager.NavigateTo("/regulators");
        }
        catch (Exception ex)
        {
            currentError = new ErrorResponseDto { Message = "فشل تحديث الجهة التنظيمية", Details = ex.Message };
            await ErrorToastService.ShowErrorAsync("فشل التحديث", ex.Message);
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
