@page "/regulators/create"
@using Grc.Application.Contracts.Regulator
@using Grc.Permissions
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(GrcPermissions.Regulators.Manage)]

<PageTitle>إضافة جهة تنظيمية جديدة</PageTitle>

<h3>إضافة جهة تنظيمية جديدة</h3>

<EditForm Model="@createInput" OnValidSubmit="@CreateRegulator">
    <DataAnnotationsValidator />
    
    <div class="mb-3">
        <label class="form-label">الاسم *</label>
        <InputText @bind-Value="createInput.Name" class="form-control" />
        <ValidationMessage For="@(() => createInput.Name)" />
    </div>

    <div class="mb-3">
        <label class="form-label">الوصف</label>
        <InputTextArea @bind-Value="createInput.Description" class="form-control" rows="3" />
    </div>

    <div class="mb-3">
        <label class="form-label">نوع الجهة</label>
        <InputText @bind-Value="createInput.RegulatorType" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">البلد</label>
        <InputText @bind-Value="createInput.Country" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">المنطقة</label>
        <InputText @bind-Value="createInput.Region" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">البريد الإلكتروني</label>
        <InputText type="email" @bind-Value="createInput.ContactEmail" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">رقم الهاتف</label>
        <InputText @bind-Value="createInput.ContactPhone" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">الموقع الإلكتروني</label>
        <InputText @bind-Value="createInput.Website" class="form-control" />
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary" disabled="@isSubmitting">حفظ</button>
        <a href="/regulators" class="btn btn-secondary">إلغاء</a>
    </div>
</EditForm>

<ErrorDialog @bind-Error="currentError" />

@code {
    [Inject] private IRegulatorAppService RegulatorAppService { get; set; } = null!;
    [Inject] private ErrorToastService ErrorToastService { get; set; } = null!;
    [Inject] private NavigationManager NavigationManager { get; set; } = null!;
    
    private CreateRegulatorDto createInput = new();
    private bool isSubmitting = false;
    private ErrorResponseDto? currentError;

    private async Task CreateRegulator()
    {
        try
        {
            isSubmitting = true;
            await RegulatorAppService.CreateAsync(createInput);
            await ErrorToastService.ShowSuccessAsync("تم إنشاء الجهة التنظيمية بنجاح");
            NavigationManager.NavigateTo("/regulators");
        }
        catch (Exception ex)
        {
            currentError = new ErrorResponseDto { Message = "فشل إنشاء الجهة التنظيمية", Details = ex.Message };
            await ErrorToastService.ShowErrorAsync("فشل الإنشاء", ex.Message);
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
