@page "/action-plans/edit/{Id:guid}"
@using Grc.Application.Contracts.ActionPlan
@using Grc.Permissions
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(GrcPermissions.ActionPlans.Manage)]

<PageTitle>تعديل خطة العمل</PageTitle>

<h3>تعديل خطة العمل</h3>

@if (isLoading)
{
    <p>جاري التحميل...</p>
}
else if (item != null)
{
    <EditForm Model="@updateInput" OnValidSubmit="@UpdateActionPlan">
        <DataAnnotationsValidator />
        
        <div class="mb-3">
            <label class="form-label">الاسم *</label>
            <InputText @bind-Value="updateInput.Name" class="form-control" />
            <ValidationMessage For="@(() => updateInput.Name)" />
        </div>

        <div class="mb-3">
            <label class="form-label">الوصف</label>
            <InputTextArea @bind-Value="updateInput.Description" class="form-control" rows="3" />
        </div>

        <div class="mb-3">
            <label class="form-label">المالك</label>
            <InputText @bind-Value="updateInput.Owner" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">تصنيف البيانات</label>
            <InputSelect @bind-Value="updateInput.DataClassification" class="form-select">
                <option value="">اختر...</option>
                <option value="public">عام</option>
                <option value="internal">داخلي</option>
                <option value="confidential">سري</option>
                <option value="restricted">مقيد</option>
            </InputSelect>
        </div>

        <div class="mb-3">
            <label class="form-label">تاريخ الاستحقاق</label>
            <InputDate @bind-Value="updateInput.DueDate" class="form-control" />
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">حفظ</button>
            <a href="/action-plans" class="btn btn-secondary">إلغاء</a>
        </div>
    </EditForm>
}

<ErrorDialog @bind-Error="currentError" />

@code {
    [Parameter] public Guid Id { get; set; }
    
    [Inject] private IActionPlanAppService ActionPlanAppService { get; set; } = null!;
    [Inject] private ErrorToastService ErrorToastService { get; set; } = null!;
    [Inject] private NavigationManager NavigationManager { get; set; } = null!;
    
    private ActionPlanDto? item;
    private UpdateActionPlanDto updateInput = new();
    private bool isLoading = true;
    private bool isSubmitting = false;
    private ErrorResponseDto? currentError;

    protected override async Task OnInitializedAsync()
    {
        await LoadItemAsync();
    }

    private async Task LoadItemAsync()
    {
        try
        {
            isLoading = true;
            item = await ActionPlanAppService.GetAsync(Id);
            updateInput = new UpdateActionPlanDto
            {
                Name = item.Name,
                Description = item.Description,
                Owner = item.Owner,
                DataClassification = item.DataClassification
            };
        }
        catch (Exception ex)
        {
            currentError = new ErrorResponseDto { Message = "فشل تحميل خطة العمل", Details = ex.Message };
            await ErrorToastService.ShowErrorAsync("فشل التحميل", ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task UpdateActionPlan()
    {
        try
        {
            isSubmitting = true;
            await ActionPlanAppService.UpdateAsync(Id, updateInput);
            await ErrorToastService.ShowSuccessAsync("تم تحديث خطة العمل بنجاح");
            NavigationManager.NavigateTo("/action-plans");
        }
        catch (Exception ex)
        {
            currentError = new ErrorResponseDto { Message = "فشل تحديث خطة العمل", Details = ex.Message };
            await ErrorToastService.ShowErrorAsync("فشل التحديث", ex.Message);
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
