@page "/control-assessments/edit/{Id:guid}"
@using Grc.Application.Contracts.ControlAssessment
@using Grc.Permissions
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(GrcPermissions.ControlAssessments.Manage)]

<PageTitle>تعديل تقييم الضابط</PageTitle>

<h3>تعديل تقييم الضابط</h3>

@if (isLoading)
{
    <p>جاري التحميل...</p>
}
else if (item != null)
{
    <EditForm Model="@updateInput" OnValidSubmit="@UpdateControlAssessment">
        <DataAnnotationsValidator />
        
        <div class="mb-3">
            <label class="form-label">الاسم *</label>
            <InputText @bind-Value="updateInput.Name" class="form-control" />
            <ValidationMessage For="@(() => updateInput.Name)" />
        </div>

        <div class="mb-3">
            <label class="form-label">الوصف</label>
            <InputTextArea @bind-Value="updateInput.Description" class="form-control" rows="3" />
        </div>

        <div class="mb-3">
            <label class="form-label">المالك</label>
            <InputText @bind-Value="updateInput.Owner" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">الفعالية</label>
            <InputSelect @bind-Value="updateInput.Effectiveness" class="form-select">
                <option value="">اختر...</option>
                <option value="Effective">فعال</option>
                <option value="PartiallyEffective">فعال جزئياً</option>
                <option value="Ineffective">غير فعال</option>
            </InputSelect>
        </div>

        <div class="mb-3">
            <label class="form-label">تصنيف البيانات</label>
            <InputSelect @bind-Value="updateInput.DataClassification" class="form-select">
                <option value="">اختر...</option>
                <option value="public">عام</option>
                <option value="internal">داخلي</option>
                <option value="confidential">سري</option>
                <option value="restricted">مقيد</option>
            </InputSelect>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">حفظ</button>
            <a href="/control-assessments" class="btn btn-secondary">إلغاء</a>
        </div>
    </EditForm>
}

<ErrorDialog @bind-Error="currentError" />

@code {
    [Parameter] public Guid Id { get; set; }
    
    [Inject] private IControlAssessmentAppService ControlAssessmentAppService { get; set; } = null!;
    [Inject] private ErrorToastService ErrorToastService { get; set; } = null!;
    [Inject] private NavigationManager NavigationManager { get; set; } = null!;
    
    private ControlAssessmentDto? item;
    private UpdateControlAssessmentDto updateInput = new();
    private bool isLoading = true;
    private bool isSubmitting = false;
    private ErrorResponseDto? currentError;

    protected override async Task OnInitializedAsync()
    {
        await LoadItemAsync();
    }

    private async Task LoadItemAsync()
    {
        try
        {
            isLoading = true;
            item = await ControlAssessmentAppService.GetAsync(Id);
            updateInput = new UpdateControlAssessmentDto
            {
                Name = item.Name,
                Description = item.Description,
                Owner = item.Owner,
                Effectiveness = item.Effectiveness,
                DataClassification = item.DataClassification
            };
        }
        catch (Exception ex)
        {
            currentError = new ErrorResponseDto { Message = "فشل تحميل التقييم", Details = ex.Message };
            await ErrorToastService.ShowErrorAsync("فشل التحميل", ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task UpdateControlAssessment()
    {
        try
        {
            isSubmitting = true;
            await ControlAssessmentAppService.UpdateAsync(Id, updateInput);
            await ErrorToastService.ShowSuccessAsync("تم تحديث التقييم بنجاح");
            NavigationManager.NavigateTo("/control-assessments");
        }
        catch (Exception ex)
        {
            currentError = new ErrorResponseDto { Message = "فشل تحديث التقييم", Details = ex.Message };
            await ErrorToastService.ShowErrorAsync("فشل التحديث", ex.Message);
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
