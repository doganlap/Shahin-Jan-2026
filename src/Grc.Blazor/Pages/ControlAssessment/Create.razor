@page "/control-assessments/create"
@using Grc.Application.Contracts.ControlAssessment
@using Grc.Permissions
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(GrcPermissions.ControlAssessments.Manage)]

<PageTitle>إضافة تقييم ضابط جديد</PageTitle>

<h3>إضافة تقييم ضابط جديد</h3>

<EditForm Model="@createInput" OnValidSubmit="@CreateControlAssessment">
    <DataAnnotationsValidator />
    
    <div class="mb-3">
        <label class="form-label">الاسم *</label>
        <InputText @bind-Value="createInput.Name" class="form-control" />
        <ValidationMessage For="@(() => createInput.Name)" />
    </div>

    <div class="mb-3">
        <label class="form-label">الوصف</label>
        <InputTextArea @bind-Value="createInput.Description" class="form-control" rows="3" />
    </div>

    <div class="mb-3">
        <label class="form-label">المالك</label>
        <InputText @bind-Value="createInput.Owner" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">معرف الضابط</label>
        <InputText @bind-Value="createInput.ControlId" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">اسم الضابط</label>
        <InputText @bind-Value="createInput.ControlName" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">الفعالية</label>
        <InputSelect @bind-Value="createInput.Effectiveness" class="form-select">
            <option value="">اختر...</option>
            <option value="Effective">فعال</option>
            <option value="PartiallyEffective">فعال جزئياً</option>
            <option value="Ineffective">غير فعال</option>
        </InputSelect>
    </div>

    <div class="mb-3">
        <label class="form-label">تصنيف البيانات</label>
        <InputSelect @bind-Value="createInput.DataClassification" class="form-select">
            <option value="">اختر...</option>
            <option value="public">عام</option>
            <option value="internal">داخلي</option>
            <option value="confidential">سري</option>
            <option value="restricted">مقيد</option>
        </InputSelect>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary" disabled="@isSubmitting">حفظ</button>
        <a href="/control-assessments" class="btn btn-secondary">إلغاء</a>
    </div>
</EditForm>

<ErrorDialog @bind-Error="currentError" />

@code {
    [Inject] private IControlAssessmentAppService ControlAssessmentAppService { get; set; } = null!;
    [Inject] private ErrorToastService ErrorToastService { get; set; } = null!;
    [Inject] private NavigationManager NavigationManager { get; set; } = null!;
    
    private CreateControlAssessmentDto createInput = new();
    private bool isSubmitting = false;
    private ErrorResponseDto? currentError;

    private async Task CreateControlAssessment()
    {
        try
        {
            isSubmitting = true;
            await ControlAssessmentAppService.CreateAsync(createInput);
            await ErrorToastService.ShowSuccessAsync("تم إنشاء التقييم بنجاح");
            NavigationManager.NavigateTo("/control-assessments");
        }
        catch (Exception ex)
        {
            currentError = new ErrorResponseDto { Message = "فشل إنشاء التقييم", Details = ex.Message };
            await ErrorToastService.ShowErrorAsync("فشل الإنشاء", ex.Message);
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
