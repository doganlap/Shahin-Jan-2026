@page "/audits/create"
@using Grc.Application.Contracts.Audit
@using Grc.Permissions
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(GrcPermissions.Audits.Manage)]

<PageTitle>إضافة مراجعة جديدة</PageTitle>

<h3>إضافة مراجعة جديدة</h3>

<EditForm Model="@createInput" OnValidSubmit="@CreateAudit">
    <DataAnnotationsValidator />
    
    <div class="mb-3">
        <label class="form-label">الاسم *</label>
        <InputText @bind-Value="createInput.Name" class="form-control" />
        <ValidationMessage For="@(() => createInput.Name)" />
    </div>

    <div class="mb-3">
        <label class="form-label">الوصف</label>
        <InputTextArea @bind-Value="createInput.Description" class="form-control" rows="3" />
    </div>

    <div class="mb-3">
        <label class="form-label">المالك</label>
        <InputText @bind-Value="createInput.Owner" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">تصنيف البيانات</label>
        <InputSelect @bind-Value="createInput.DataClassification" class="form-select">
            <option value="">اختر...</option>
            <option value="public">عام</option>
            <option value="internal">داخلي</option>
            <option value="confidential">سري</option>
            <option value="restricted">مقيد</option>
        </InputSelect>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary" disabled="@isSubmitting">حفظ</button>
        <a href="/audits" class="btn btn-secondary">إلغاء</a>
    </div>
</EditForm>

<ErrorDialog @bind-Error="currentError" />

@code {
    [Inject] private IAuditAppService AuditAppService { get; set; } = null!;
    [Inject] private ErrorToastService ErrorToastService { get; set; } = null!;
    [Inject] private NavigationManager NavigationManager { get; set; } = null!;
    
    private CreateAuditDto createInput = new();
    private bool isSubmitting = false;
    private ErrorResponseDto? currentError;

    private async Task CreateAudit()
    {
        try
        {
            isSubmitting = true;
            await AuditAppService.CreateAsync(createInput);
            await ErrorToastService.ShowSuccessAsync("تم إنشاء المراجعة بنجاح");
            NavigationManager.NavigateTo("/audits");
        }
        catch (Exception ex)
        {
            currentError = new ErrorResponseDto { Message = "فشل إنشاء المراجعة", Details = ex.Message };
            await ErrorToastService.ShowErrorAsync("فشل الإنشاء", ex.Message);
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
