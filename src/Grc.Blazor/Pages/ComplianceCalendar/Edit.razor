@page "/compliance-calendar/edit/{Id:guid}"
@using Grc.Application.Contracts.ComplianceEvent
@using Grc.Permissions
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(GrcPermissions.ComplianceCalendar.Manage)]

<PageTitle>تعديل حدث الامتثال</PageTitle>

<h3>تعديل حدث الامتثال</h3>

@if (isLoading)
{
    <p>جاري التحميل...</p>
}
else if (item != null)
{
    <EditForm Model="@updateInput" OnValidSubmit="@UpdateEvent">
        <DataAnnotationsValidator />
        
        <div class="mb-3">
            <label class="form-label">الاسم *</label>
            <InputText @bind-Value="updateInput.Name" class="form-control" />
            <ValidationMessage For="@(() => updateInput.Name)" />
        </div>

        <div class="mb-3">
            <label class="form-label">الوصف</label>
            <InputTextArea @bind-Value="updateInput.Description" class="form-control" rows="3" />
        </div>

        <div class="mb-3">
            <label class="form-label">نوع الحدث</label>
            <InputText @bind-Value="updateInput.EventType" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">تاريخ الحدث</label>
            <InputDate @bind-Value="updateInput.EventDate" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">تاريخ الاستحقاق</label>
            <InputDate @bind-Value="updateInput.DueDate" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">الأولوية</label>
            <InputSelect @bind-Value="updateInput.Priority" class="form-select">
                <option value="">اختر...</option>
                <option value="Low">منخفضة</option>
                <option value="Medium">متوسطة</option>
                <option value="High">عالية</option>
            </InputSelect>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">حفظ</button>
            <a href="/compliance-calendar" class="btn btn-secondary">إلغاء</a>
        </div>
    </EditForm>
}

<ErrorDialog @bind-Error="currentError" />

@code {
    [Parameter] public Guid Id { get; set; }
    
    [Inject] private IComplianceCalendarAppService ComplianceCalendarAppService { get; set; } = null!;
    [Inject] private ErrorToastService ErrorToastService { get; set; } = null!;
    [Inject] private NavigationManager NavigationManager { get; set; } = null!;
    
    private ComplianceEventDto? item;
    private UpdateComplianceEventDto updateInput = new();
    private bool isLoading = true;
    private bool isSubmitting = false;
    private ErrorResponseDto? currentError;

    protected override async Task OnInitializedAsync()
    {
        await LoadItemAsync();
    }

    private async Task LoadItemAsync()
    {
        try
        {
            isLoading = true;
            item = await ComplianceCalendarAppService.GetAsync(Id);
            updateInput = new UpdateComplianceEventDto
            {
                Name = item.Name,
                Description = item.Description,
                EventType = item.EventType,
                EventDate = item.EventDate,
                DueDate = item.DueDate,
                Priority = item.Priority
            };
        }
        catch (Exception ex)
        {
            currentError = new ErrorResponseDto { Message = "فشل تحميل الحدث", Details = ex.Message };
            await ErrorToastService.ShowErrorAsync("فشل التحميل", ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task UpdateEvent()
    {
        try
        {
            isSubmitting = true;
            await ComplianceCalendarAppService.UpdateAsync(Id, updateInput);
            await ErrorToastService.ShowSuccessAsync("تم تحديث الحدث بنجاح");
            NavigationManager.NavigateTo("/compliance-calendar");
        }
        catch (Exception ex)
        {
            currentError = new ErrorResponseDto { Message = "فشل تحديث الحدث", Details = ex.Message };
            await ErrorToastService.ShowErrorAsync("فشل التحديث", ex.Message);
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
