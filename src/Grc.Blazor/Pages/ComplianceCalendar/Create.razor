@page "/compliance-calendar/create"
@using Grc.Application.Contracts.ComplianceEvent
@using Grc.Permissions
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(GrcPermissions.ComplianceCalendar.Manage)]

<PageTitle>إضافة حدث امتثال جديد</PageTitle>

<h3>إضافة حدث امتثال جديد</h3>

<EditForm Model="@createInput" OnValidSubmit="@CreateEvent">
    <DataAnnotationsValidator />
    
    <div class="mb-3">
        <label class="form-label">الاسم *</label>
        <InputText @bind-Value="createInput.Name" class="form-control" />
        <ValidationMessage For="@(() => createInput.Name)" />
    </div>

    <div class="mb-3">
        <label class="form-label">الوصف</label>
        <InputTextArea @bind-Value="createInput.Description" class="form-control" rows="3" />
    </div>

    <div class="mb-3">
        <label class="form-label">نوع الحدث</label>
        <InputText @bind-Value="createInput.EventType" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">تاريخ الحدث</label>
        <InputDate @bind-Value="createInput.EventDate" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">تاريخ الاستحقاق *</label>
        <InputDate @bind-Value="createInput.DueDate" class="form-control" />
        <ValidationMessage For="@(() => createInput.DueDate)" />
    </div>

    <div class="mb-3">
        <label class="form-label">الأولوية</label>
        <InputSelect @bind-Value="createInput.Priority" class="form-select">
            <option value="">اختر...</option>
            <option value="Low">منخفضة</option>
            <option value="Medium">متوسطة</option>
            <option value="High">عالية</option>
        </InputSelect>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary" disabled="@isSubmitting">حفظ</button>
        <a href="/compliance-calendar" class="btn btn-secondary">إلغاء</a>
    </div>
</EditForm>

<ErrorDialog @bind-Error="currentError" />

@code {
    [Inject] private IComplianceCalendarAppService ComplianceCalendarAppService { get; set; } = null!;
    [Inject] private ErrorToastService ErrorToastService { get; set; } = null!;
    [Inject] private NavigationManager NavigationManager { get; set; } = null!;
    
    private CreateComplianceEventDto createInput = new();
    private bool isSubmitting = false;
    private ErrorResponseDto? currentError;

    private async Task CreateEvent()
    {
        try
        {
            isSubmitting = true;
            await ComplianceCalendarAppService.CreateAsync(createInput);
            await ErrorToastService.ShowSuccessAsync("تم إنشاء الحدث بنجاح");
            NavigationManager.NavigateTo("/compliance-calendar");
        }
        catch (Exception ex)
        {
            currentError = new ErrorResponseDto { Message = "فشل إنشاء الحدث", Details = ex.Message };
            await ErrorToastService.ShowErrorAsync("فشل الإنشاء", ex.Message);
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
