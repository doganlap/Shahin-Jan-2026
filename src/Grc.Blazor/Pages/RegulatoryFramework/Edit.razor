@page "/frameworks/edit/{Id:guid}"
@using Grc.Application.Contracts.RegulatoryFramework
@using Grc.Permissions
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(GrcPermissions.Frameworks.Update)]

<PageTitle>تعديل الإطار التنظيمي</PageTitle>

<h3>تعديل الإطار التنظيمي</h3>

@if (isLoading)
{
    <p>جاري التحميل...</p>
}
else if (item != null)
{
    <EditForm Model="@updateInput" OnValidSubmit="@UpdateFramework">
        <DataAnnotationsValidator />
        
        <div class="mb-3">
            <label class="form-label">الاسم *</label>
            <InputText @bind-Value="updateInput.Name" class="form-control" />
            <ValidationMessage For="@(() => updateInput.Name)" />
        </div>

        <div class="mb-3">
            <label class="form-label">الوصف</label>
            <InputTextArea @bind-Value="updateInput.Description" class="form-control" rows="3" />
        </div>

        <div class="mb-3">
            <label class="form-label">نوع الإطار</label>
            <InputText @bind-Value="updateInput.FrameworkType" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">المنطقة</label>
            <InputText @bind-Value="updateInput.Jurisdiction" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">الموقع الإلكتروني</label>
            <InputText @bind-Value="updateInput.Website" class="form-control" />
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">حفظ</button>
            <a href="/frameworks" class="btn btn-secondary">إلغاء</a>
        </div>
    </EditForm>
}

<ErrorDialog @bind-Error="currentError" />

@code {
    [Parameter] public Guid Id { get; set; }
    
    [Inject] private IRegulatoryFrameworkAppService RegulatoryFrameworkAppService { get; set; } = null!;
    [Inject] private ErrorToastService ErrorToastService { get; set; } = null!;
    [Inject] private NavigationManager NavigationManager { get; set; } = null!;
    
    private RegulatoryFrameworkDto? item;
    private UpdateRegulatoryFrameworkDto updateInput = new();
    private bool isLoading = true;
    private bool isSubmitting = false;
    private ErrorResponseDto? currentError;

    protected override async Task OnInitializedAsync()
    {
        await LoadItemAsync();
    }

    private async Task LoadItemAsync()
    {
        try
        {
            isLoading = true;
            item = await RegulatoryFrameworkAppService.GetAsync(Id);
            updateInput = new UpdateRegulatoryFrameworkDto
            {
                Name = item.Name,
                Description = item.Description,
                FrameworkType = item.FrameworkType,
                Jurisdiction = item.Jurisdiction,
                Website = item.Website
            };
        }
        catch (Exception ex)
        {
            currentError = new ErrorResponseDto { Message = "فشل تحميل الإطار التنظيمي", Details = ex.Message };
            await ErrorToastService.ShowErrorAsync("فشل التحميل", ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task UpdateFramework()
    {
        try
        {
            isSubmitting = true;
            await RegulatoryFrameworkAppService.UpdateAsync(Id, updateInput);
            await ErrorToastService.ShowSuccessAsync("تم تحديث الإطار التنظيمي بنجاح");
            NavigationManager.NavigateTo("/frameworks");
        }
        catch (Exception ex)
        {
            currentError = new ErrorResponseDto { Message = "فشل تحديث الإطار التنظيمي", Details = ex.Message };
            await ErrorToastService.ShowErrorAsync("فشل التحديث", ex.Message);
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
