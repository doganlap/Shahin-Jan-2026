@page "/risks/create"
@using Grc.Application.Contracts.Risk
@using Grc.Permissions
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(GrcPermissions.Risks.Manage)]

<PageTitle>إضافة خطر جديد</PageTitle>

<h3>إضافة خطر جديد</h3>

<EditForm Model="@createInput" OnValidSubmit="@CreateRisk">
    <DataAnnotationsValidator />
    
    <div class="mb-3">
        <label class="form-label">الاسم *</label>
        <InputText @bind-Value="createInput.Name" class="form-control" />
        <ValidationMessage For="@(() => createInput.Name)" />
    </div>

    <div class="mb-3">
        <label class="form-label">الوصف</label>
        <InputTextArea @bind-Value="createInput.Description" class="form-control" rows="3" />
    </div>

    <div class="mb-3">
        <label class="form-label">المالك</label>
        <InputText @bind-Value="createInput.Owner" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">الشدة</label>
        <InputSelect @bind-Value="createInput.Severity" class="form-select">
            <option value="">اختر...</option>
            <option value="Low">منخفضة</option>
            <option value="Medium">متوسطة</option>
            <option value="High">عالية</option>
            <option value="Critical">حرجة</option>
        </InputSelect>
    </div>

    <div class="mb-3">
        <label class="form-label">تصنيف البيانات</label>
        <InputSelect @bind-Value="createInput.DataClassification" class="form-select">
            <option value="">اختر...</option>
            <option value="public">عام</option>
            <option value="internal">داخلي</option>
            <option value="confidential">سري</option>
            <option value="restricted">مقيد</option>
        </InputSelect>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary" disabled="@isSubmitting">حفظ</button>
        <a href="/risks" class="btn btn-secondary">إلغاء</a>
    </div>
</EditForm>

<ErrorDialog @bind-Error="currentError" />

@code {
    [Inject] private IRiskAppService RiskAppService { get; set; } = null!;
    [Inject] private ErrorToastService ErrorToastService { get; set; } = null!;
    [Inject] private NavigationManager NavigationManager { get; set; } = null!;
    
    private CreateRiskDto createInput = new();
    private bool isSubmitting = false;
    private ErrorResponseDto? currentError;

    private async Task CreateRisk()
    {
        try
        {
            isSubmitting = true;
            await RiskAppService.CreateAsync(createInput);
            await ErrorToastService.ShowSuccessAsync("تم إنشاء الخطر بنجاح");
            NavigationManager.NavigateTo("/risks");
        }
        catch (Exception ex)
        {
            currentError = new ErrorResponseDto { Message = "فشل إنشاء الخطر", Details = ex.Message };
            await ErrorToastService.ShowErrorAsync("فشل الإنشاء", ex.Message);
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
