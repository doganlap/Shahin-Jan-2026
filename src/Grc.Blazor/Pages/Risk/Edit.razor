@page "/risks/edit/{Id:guid}"
@using Grc.Application.Contracts.Risk
@using Grc.Permissions
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(GrcPermissions.Risks.Manage)]

<PageTitle>تعديل الخطر</PageTitle>

<h3>تعديل الخطر</h3>

@if (isLoading)
{
    <p>جاري التحميل...</p>
}
else if (item != null)
{
    <EditForm Model="@updateInput" OnValidSubmit="@UpdateRisk">
        <DataAnnotationsValidator />
        
        <div class="mb-3">
            <label class="form-label">الاسم *</label>
            <InputText @bind-Value="updateInput.Name" class="form-control" />
            <ValidationMessage For="@(() => updateInput.Name)" />
        </div>

        <div class="mb-3">
            <label class="form-label">الوصف</label>
            <InputTextArea @bind-Value="updateInput.Description" class="form-control" rows="3" />
        </div>

        <div class="mb-3">
            <label class="form-label">المالك</label>
            <InputText @bind-Value="updateInput.Owner" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">الشدة</label>
            <InputSelect @bind-Value="updateInput.Severity" class="form-select">
                <option value="">اختر...</option>
                <option value="Low">منخفضة</option>
                <option value="Medium">متوسطة</option>
                <option value="High">عالية</option>
                <option value="Critical">حرجة</option>
            </InputSelect>
        </div>

        <div class="mb-3">
            <label class="form-label">تصنيف البيانات</label>
            <InputSelect @bind-Value="updateInput.DataClassification" class="form-select">
                <option value="">اختر...</option>
                <option value="public">عام</option>
                <option value="internal">داخلي</option>
                <option value="confidential">سري</option>
                <option value="restricted">مقيد</option>
            </InputSelect>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">حفظ</button>
            <a href="/risks" class="btn btn-secondary">إلغاء</a>
        </div>
    </EditForm>
}

<ErrorDialog @bind-Error="currentError" />

@code {
    [Parameter] public Guid Id { get; set; }
    
    [Inject] private IRiskAppService RiskAppService { get; set; } = null!;
    [Inject] private ErrorToastService ErrorToastService { get; set; } = null!;
    [Inject] private NavigationManager NavigationManager { get; set; } = null!;
    
    private RiskDto? item;
    private UpdateRiskDto updateInput = new();
    private bool isLoading = true;
    private bool isSubmitting = false;
    private ErrorResponseDto? currentError;

    protected override async Task OnInitializedAsync()
    {
        await LoadItemAsync();
    }

    private async Task LoadItemAsync()
    {
        try
        {
            isLoading = true;
            item = await RiskAppService.GetAsync(Id);
            updateInput = new UpdateRiskDto
            {
                Name = item.Name,
                Description = item.Description,
                Owner = item.Owner,
                Severity = item.Severity,
                DataClassification = item.DataClassification
            };
        }
        catch (Exception ex)
        {
            currentError = new ErrorResponseDto { Message = "فشل تحميل الخطر", Details = ex.Message };
            await ErrorToastService.ShowErrorAsync("فشل التحميل", ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task UpdateRisk()
    {
        try
        {
            isSubmitting = true;
            await RiskAppService.UpdateAsync(Id, updateInput);
            await ErrorToastService.ShowSuccessAsync("تم تحديث الخطر بنجاح");
            NavigationManager.NavigateTo("/risks");
        }
        catch (Exception ex)
        {
            currentError = new ErrorResponseDto { Message = "فشل تحديث الخطر", Details = ex.Message };
            await ErrorToastService.ShowErrorAsync("فشل التحديث", ex.Message);
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
