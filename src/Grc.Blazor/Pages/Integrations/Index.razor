@page "/integrations"
@using Grc.Permissions
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(GrcPermissions.Integrations.View)]

<PageTitle>مركز التكامل</PageTitle>

<h3>مركز التكامل</h3>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">تكاملات API</h5>
                <p class="card-text">إدارة تكاملات API الخارجية</p>
                <AuthorizeView Permission="@GrcPermissions.Integrations.Manage">
                    <Authorized>
                        <button class="btn btn-primary" @onclick="ConfigureApiIntegration">تكوين</button>
                    </Authorized>
                </AuthorizeView>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">تكاملات قاعدة البيانات</h5>
                <p class="card-text">إدارة تكاملات قواعد البيانات</p>
                <AuthorizeView Permission="@GrcPermissions.Integrations.Manage">
                    <Authorized>
                        <button class="btn btn-primary" @onclick="ConfigureDbIntegration">تكوين</button>
                    </Authorized>
                </AuthorizeView>
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">حالة التكاملات</h5>
                @if (integrations != null && integrations.Any())
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>الاسم</th>
                                <th>النوع</th>
                                <th>الحالة</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var integration in integrations)
                            {
                                <tr>
                                    <td>@integration.Name</td>
                                    <td>@integration.Type</td>
                                    <td>
                                        <span class="badge @(integration.IsActive ? "bg-success" : "bg-danger")">
                                            @(integration.IsActive ? "نشط" : "غير نشط")
                                        </span>
                                    </td>
                                    <td>
                                        <AuthorizeView Permission="@GrcPermissions.Integrations.Manage">
                                            <Authorized>
                                                <button class="btn btn-sm btn-secondary" @onclick="() => EditIntegration(integration.Id)">تعديل</button>
                                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteIntegration(integration.Id)">حذف</button>
                                            </Authorized>
                                        </AuthorizeView>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>لا توجد تكاملات</p>
                }
            </div>
        </div>
    </div>
</div>

