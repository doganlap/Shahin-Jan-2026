@page "/vendors/edit/{Id:guid}"
@using Grc.Application.Contracts.Vendor
@using Grc.Permissions
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(GrcPermissions.Vendors.Manage)]

<PageTitle>تعديل المورد</PageTitle>

<h3>تعديل المورد</h3>

@if (isLoading)
{
    <p>جاري التحميل...</p>
}
else if (item != null)
{
    <EditForm Model="@updateInput" OnValidSubmit="@UpdateVendor">
        <DataAnnotationsValidator />
        
        <div class="mb-3">
            <label class="form-label">الاسم *</label>
            <InputText @bind-Value="updateInput.Name" class="form-control" />
            <ValidationMessage For="@(() => updateInput.Name)" />
        </div>

        <div class="mb-3">
            <label class="form-label">الوصف</label>
            <InputTextArea @bind-Value="updateInput.Description" class="form-control" rows="3" />
        </div>

        <div class="mb-3">
            <label class="form-label">نوع المورد</label>
            <InputText @bind-Value="updateInput.VendorType" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">اسم جهة الاتصال</label>
            <InputText @bind-Value="updateInput.ContactName" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">البريد الإلكتروني</label>
            <InputText type="email" @bind-Value="updateInput.ContactEmail" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">رقم الهاتف</label>
            <InputText @bind-Value="updateInput.ContactPhone" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">تقييم المخاطر</label>
            <InputSelect @bind-Value="updateInput.RiskRating" class="form-select">
                <option value="">اختر...</option>
                <option value="Low">منخفض</option>
                <option value="Medium">متوسط</option>
                <option value="High">عالي</option>
            </InputSelect>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">حفظ</button>
            <a href="/vendors" class="btn btn-secondary">إلغاء</a>
        </div>
    </EditForm>
}

<ErrorDialog @bind-Error="currentError" />

@code {
    [Parameter] public Guid Id { get; set; }
    
    [Inject] private IVendorAppService VendorAppService { get; set; } = null!;
    [Inject] private ErrorToastService ErrorToastService { get; set; } = null!;
    [Inject] private NavigationManager NavigationManager { get; set; } = null!;
    
    private VendorDto? item;
    private UpdateVendorDto updateInput = new();
    private bool isLoading = true;
    private bool isSubmitting = false;
    private ErrorResponseDto? currentError;

    protected override async Task OnInitializedAsync()
    {
        await LoadItemAsync();
    }

    private async Task LoadItemAsync()
    {
        try
        {
            isLoading = true;
            item = await VendorAppService.GetAsync(Id);
            updateInput = new UpdateVendorDto
            {
                Name = item.Name,
                Description = item.Description,
                VendorType = item.VendorType,
                ContactName = item.ContactName,
                ContactEmail = item.ContactEmail,
                ContactPhone = item.ContactPhone,
                RiskRating = item.RiskRating
            };
        }
        catch (Exception ex)
        {
            currentError = new ErrorResponseDto { Message = "فشل تحميل المورد", Details = ex.Message };
            await ErrorToastService.ShowErrorAsync("فشل التحميل", ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task UpdateVendor()
    {
        try
        {
            isSubmitting = true;
            await VendorAppService.UpdateAsync(Id, updateInput);
            await ErrorToastService.ShowSuccessAsync("تم تحديث المورد بنجاح");
            NavigationManager.NavigateTo("/vendors");
        }
        catch (Exception ex)
        {
            currentError = new ErrorResponseDto { Message = "فشل تحديث المورد", Details = ex.Message };
            await ErrorToastService.ShowErrorAsync("فشل التحديث", ex.Message);
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
