@page "/vendors/create"
@using Grc.Application.Contracts.Vendor
@using Grc.Permissions
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(GrcPermissions.Vendors.Manage)]

<PageTitle>إضافة مورد جديد</PageTitle>

<h3>إضافة مورد جديد</h3>

<EditForm Model="@createInput" OnValidSubmit="@CreateVendor">
    <DataAnnotationsValidator />
    
    <div class="mb-3">
        <label class="form-label">الاسم *</label>
        <InputText @bind-Value="createInput.Name" class="form-control" />
        <ValidationMessage For="@(() => createInput.Name)" />
    </div>

    <div class="mb-3">
        <label class="form-label">الوصف</label>
        <InputTextArea @bind-Value="createInput.Description" class="form-control" rows="3" />
    </div>

    <div class="mb-3">
        <label class="form-label">نوع المورد</label>
        <InputText @bind-Value="createInput.VendorType" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">اسم جهة الاتصال</label>
        <InputText @bind-Value="createInput.ContactName" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">البريد الإلكتروني</label>
        <InputText type="email" @bind-Value="createInput.ContactEmail" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">رقم الهاتف</label>
        <InputText @bind-Value="createInput.ContactPhone" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">تقييم المخاطر</label>
        <InputSelect @bind-Value="createInput.RiskRating" class="form-select">
            <option value="">اختر...</option>
            <option value="Low">منخفض</option>
            <option value="Medium">متوسط</option>
            <option value="High">عالي</option>
        </InputSelect>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary" disabled="@isSubmitting">حفظ</button>
        <a href="/vendors" class="btn btn-secondary">إلغاء</a>
    </div>
</EditForm>

<ErrorDialog @bind-Error="currentError" />

@code {
    [Inject] private IVendorAppService VendorAppService { get; set; } = null!;
    [Inject] private ErrorToastService ErrorToastService { get; set; } = null!;
    [Inject] private NavigationManager NavigationManager { get; set; } = null!;
    
    private CreateVendorDto createInput = new();
    private bool isSubmitting = false;
    private ErrorResponseDto? currentError;

    private async Task CreateVendor()
    {
        try
        {
            isSubmitting = true;
            await VendorAppService.CreateAsync(createInput);
            await ErrorToastService.ShowSuccessAsync("تم إنشاء المورد بنجاح");
            NavigationManager.NavigateTo("/vendors");
        }
        catch (Exception ex)
        {
            currentError = new ErrorResponseDto { Message = "فشل إنشاء المورد", Details = ex.Message };
            await ErrorToastService.ShowErrorAsync("فشل الإنشاء", ex.Message);
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
