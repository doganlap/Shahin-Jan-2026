# ══════════════════════════════════════════════════════════════
# GRC SaaS Production Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to git!
# ══════════════════════════════════════════════════════════════

# Database Configuration
# ======================
# Main Application Database (GrcMvcDb)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=GrcMvcDb
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Connection Strings (Full format)
GRCMVC_DB_CONNECTION=Host=localhost;Database=GrcMvcDb;Username=postgres;Password=your_secure_password_here;Port=5432

# Authentication Database (GrcAuthDb) - Separate for security isolation
# This database contains ONLY ASP.NET Identity tables (AspNetUsers, AspNetRoles, etc.)
GRCAUTH_DB_CONNECTION=Host=localhost;Database=GrcAuthDb;Username=postgres;Password=your_secure_password_here;Port=5432

# Note: For Docker deployment, use the service name instead of localhost
# Example: Host=grc-db;Database=GrcMvcDb;Username=postgres;Password=...;Port=5432
CONNECTION_STRING=Host=grc-db;Database=GrcMvcDb;Username=postgres;Password=postgres;Port=5432
CONNECTION_STRING_GrcAuthDb=Host=grc-db;Database=GrcAuthDb;Username=postgres;Password=postgres;Port=5432

# JWT Authentication
JWT_SECRET=your_jwt_secret_at_least_32_characters_long

# SMTP / Email (Microsoft 365 OAuth2)
SMTP_HOST=smtp.office365.com
SMTP_FROM_EMAIL=info@doganconsult.com
SMTP_FROM_NAME=Shahin AI GRC System
SMTP_TENANT_ID=your_azure_tenant_id
SMTP_CLIENT_ID=your_azure_client_id
SMTP_CLIENT_SECRET=your_azure_client_secret

# Microsoft Graph API
GRAPH_TENANT_ID=your_azure_tenant_id
GRAPH_CLIENT_ID=your_graph_client_id
GRAPH_CLIENT_SECRET=your_graph_client_secret

# Copilot Agent
COPILOT_ENABLED=true
COPILOT_TENANT_ID=your_azure_tenant_id
COPILOT_CLIENT_ID=your_copilot_client_id
COPILOT_CLIENT_SECRET=your_copilot_client_secret

# Claude AI Agents
CLAUDE_ENABLED=true
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-sonnet-4-20250514

# Kafka
KAFKA_ENABLED=true
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CLIENT_ID=grc-mvc
KAFKA_GROUP_ID=grc-consumer-group

# Camunda BPM
CAMUNDA_ENABLED=true
CAMUNDA_BASE_URL=http://localhost:8085/camunda
CAMUNDA_USERNAME=demo
CAMUNDA_PASSWORD=your_camunda_password

# File Storage
FILE_STORAGE_PROVIDER=LocalFileSystem
FILE_STORAGE_BASE_PATH=/var/www/shahin-ai/storage

# ASP.NET Core
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://0.0.0.0:5010

# Analytics & BI Tools Credentials
# =================================
# Apache Superset
SUPERSET_ADMIN_USER=admin
SUPERSET_ADMIN_EMAIL=admin@shahin-ai.com
SUPERSET_ADMIN_PASSWORD=your_superset_password_here

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_password_here

# n8n Workflow Automation
N8N_USER=admin
N8N_PASSWORD=your_n8n_password_here
N8N_DB_USER=n8n
N8N_DB_PASSWORD=your_n8n_db_password_here

# Metabase
METABASE_DB_USER=metabase
METABASE_DB_PASSWORD=your_metabase_db_password_here
