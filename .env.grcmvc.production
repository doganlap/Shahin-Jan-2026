# GRC Management System - Production Environment Configuration
# Phase 1: Critical Configuration for Deployment
# Generated: 2026-01-04

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
ConnectionStrings__DefaultConnection=Server=postgres;Port=5432;Database=grc_production;User ID=grc_user;Password=Secure@PostgresPassword123!;SslMode=Require;
DB_USER=grc_user
DB_PASSWORD=Secure@PostgresPassword123!
DB_HOST=postgres
DB_PORT=5432
DB_NAME=grc_production

# =============================================================================
# ASPNETCORE CONFIGURATION
# =============================================================================
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=https://0.0.0.0:5001
ASPNETCORE_Kestrel__Certificates__Default__Path=/app/certificates/aspnetapp.pfx
ASPNETCORE_Kestrel__Certificates__Default__Password=SecurePassword123!

# =============================================================================
# ADMIN USER CONFIGURATION
# =============================================================================
AdminUser__Username=admin
AdminUser__Email=admin@grcsystem.local
AdminUser__Password=Admin@123456

# =============================================================================
# SMTP EMAIL SERVICE CONFIGURATION
# =============================================================================
SmtpSettings__Host=smtp.gmail.com
SmtpSettings__Port=587
SmtpSettings__EnableSsl=true
SmtpSettings__FromEmail=noreply@grcsystem.com
SmtpSettings__Username=your-gmail@gmail.com
SmtpSettings__Password=your-app-specific-password

# =============================================================================
# SSL CERTIFICATE CONFIGURATION
# =============================================================================
CERT_PASSWORD=SecurePassword123!
CERT_PATH=/app/certificates/aspnetapp.pfx

# =============================================================================
# HANGFIRE BACKGROUND JOBS CONFIGURATION
# =============================================================================
Hangfire__EscalationIntervalHours=1
Hangfire__NotificationDeliveryIntervalMinutes=5
Hangfire__SlaMonitorIntervalMinutes=30
Hangfire__MaxRetryAttempts=3

# =============================================================================
# WORKFLOW SETTINGS
# =============================================================================
WorkflowSettings__EnableBackgroundJobs=true
WorkflowSettings__EscalationIntervalHours=1
WorkflowSettings__NotificationDeliveryIntervalMinutes=5
WorkflowSettings__SlaMonitorIntervalMinutes=30
WorkflowSettings__MaxRetryAttempts=3
WorkflowSettings__CacheExpiryMinutes=5

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
Cache__ExpiryMinutes=5
Cache__UseDistributed=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
Jwt__SecretKey=YourSecureJwtSecretKeyOfAtLeast32CharactersLong1234
Jwt__Issuer=GrcMvcApplication
Jwt__Audience=GrcMvcApplicationUsers
Jwt__ExpiryMinutes=60

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft=Warning
Logging__LogLevel__System=Warning

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
AllowedHosts=*
CORS__AllowedOrigins=https://localhost:5001,https://grcsystem.com

# =============================================================================
# APPLICATION FEATURES
# =============================================================================
Features__EnableHangfire=true
Features__EnableEmailNotifications=true
Features__EnableBackgroundJobs=true
Features__EnableAnalytics=true
Features__MaxUploadSizeMB=100
