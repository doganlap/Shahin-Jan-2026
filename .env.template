# GRC System Environment Variables Template
# Copy this file to .env and fill in the values
# NEVER commit .env file to source control

# Database Configuration (REQUIRED - Use secure password)
ConnectionStrings__Default=Server=your-server;Database=GrcDb;User Id=your-user;Password=USE_STRONG_PASSWORD_HERE;Encrypt=true;TrustServerCertificate=False;MultipleActiveResultSets=true
ConnectionStrings__Redis=your-redis-connection-string
ConnectionStrings__BlobStorage=your-blob-storage-connection-string

# Azure Key Vault (STRONGLY RECOMMENDED for Production)
Azure__KeyVault__Uri=https://your-keyvault.vault.azure.net/
Azure__KeyVault__TenantId=your-tenant-id
Azure__KeyVault__ClientId=your-client-id
Azure__KeyVault__ClientSecret=your-client-secret

# Application URLs (Update with your domain)
App__SelfUrl=https://your-domain.com
App__ClientUrl=https://your-domain.com
App__CorsOrigins=https://your-domain.com,https://api.your-domain.com
App__RedirectAllowedUrls=https://your-domain.com

# Authentication
AuthServer__Authority=https://your-domain.com/
AuthServer__RequireHttpsMetadata=true
AuthServer__SwaggerClientId=Grc_Swagger
AuthServer__SwaggerClientSecret=generate-secure-secret-here

# Email Configuration
Email__Smtp__Server=smtp.your-provider.com
Email__Smtp__Port=587
Email__Smtp__Username=your-email@domain.com
Email__Smtp__Password=your-secure-email-password
Email__From__Address=noreply@your-domain.com
Email__From__Name=GRC System

# OpenIddict Certificates (REQUIRED for Production)
# Generate using: dotnet dev-certs https -ep cert.pfx -p your-password
OpenIddict__EncryptionCertificate__Path=/path/to/encryption.pfx
OpenIddict__EncryptionCertificate__Password=your-cert-password
OpenIddict__SigningCertificate__Path=/path/to/signing.pfx
OpenIddict__SigningCertificate__Password=your-cert-password

# Application Insights (Optional)
ApplicationInsights__ConnectionString=your-app-insights-connection-string

# Environment (Set to Production for production deployment)
ASPNETCORE_ENVIRONMENT=Production
Environment__Name=Production