{
  "ConnectionStrings": {
    "DefaultConnection": "Host=your-postgres-host;Database=GrcMvcDb;Username=grc_user;Password=your-secure-password;Port=5432;Ssl Mode=Require;Trust Server Certificate=false"
  },
  "JwtSettings": {
    "Secret": "CHANGE_THIS_IN_PRODUCTION-MustBeAtLeast32CharactersLong!",
    "Issuer": "GrcMvc",
    "Audience": "GrcMvcUsers",
    "ExpiryInMinutes": 60
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "yourdomain.com",
  "FileStorage": {
    "Provider": "AzureBlob",
    "ConnectionString": "DefaultEndpointsProtocol=https;AccountName=yourstorageaccount;AccountKey=your-storage-key;EndpointSuffix=core.windows.net",
    "ContainerName": "grc-documents"
  },
  "EmailSettings": {
    "Provider": "SendGrid",
    "ApiKey": "YOUR_SENDGRID_API_KEY",
    "FromEmail": "noreply@yourdomain.com",
    "FromName": "GRC System"
  }
}
