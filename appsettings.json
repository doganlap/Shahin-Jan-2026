{
  "ConnectionStrings": {
    "Default": "Server=localhost;Database=GrcDb;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=true",
    "Redis": "",
    "BlobStorage": ""
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5000",
      "https://localhost:5001",
      "http://localhost:8080"
    ],
    "AllowedMethods": [
      "GET",
      "POST",
      "PUT",
      "DELETE",
      "PATCH",
      "OPTIONS"
    ],
    "AllowedHeaders": [
      "*"
    ],
    "AllowCredentials": true
  },
  "Authentication": {
    "Jwt": {
      "SecretKey": "YourSecretKeyHere-MustBeAtLeast32CharactersLong",
      "Issuer": "GrcSystem",
      "Audience": "GrcSystem",
      "Expiration": 3600
    }
  },
  "MultiTenancy": {
    "IsEnabled": true,
    "DatabaseStyle": "Hybrid"
  },
  "Email": {
    "Smtp": {
      "Host": "smtp.example.com",
      "Port": 587,
      "UserName": "",
      "Password": "",
      "EnableSsl": true
    }
  },
  "FileStorage": {
    "Provider": "Local",
    "Path": "wwwroot/uploads"
  },
  "Cache": {
    "Provider": "Memory",
    "ConnectionString": ""
  },
  "Swagger": {
    "Title": "GRC API",
    "Version": "v1",
    "Description": "GRC System API Documentation"
  },
  "Policy": {
    "BasePath": "etc/policies",
    "DefaultPolicy": "grc-baseline.yml"
  },
  "AdminUser": {
    "UserName": "admin",
    "Email": "admin@grc.local",
    "Password": "1q2w3E*",
    "Name": "System",
    "Surname": "Administrator"
  },
  "Environment": {
    "Name": "Development"
  }
